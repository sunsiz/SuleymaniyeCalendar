    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ====================================== -->
    <!-- FOUNDATION: Sizes & Scales -->
    <!-- Material Design 3 Design Tokens -->
    <!-- ====================================== -->

    <!-- Typography Scale (13 sizes) -->
    <x:Double x:Key="TinyFontSize">10</x:Double>
    <x:Double x:Key="CaptionFontSize">12</x:Double>
    <x:Double x:Key="BodySmallFontSize">13</x:Double>
    <x:Double x:Key="BodyFontSize">14</x:Double>
    <x:Double x:Key="BodyLargeFontSize">15</x:Double>
    <x:Double x:Key="DefaultFontSize">16</x:Double>
    <x:Double x:Key="SubHeaderFontSize">18</x:Double>
    <x:Double x:Key="TitleSmallFontSize">20</x:Double>
    <x:Double x:Key="HeaderFontSize">22</x:Double>
    <x:Double x:Key="TitleMediumFontSize">24</x:Double>
    <x:Double x:Key="TitleFontSize">28</x:Double>
    <x:Double x:Key="DisplaySmallFontSize">32</x:Double>
    <x:Double x:Key="DisplayFontSize">36</x:Double>

    <!-- Icon Sizes (4 sizes) -->
    <x:Double x:Key="IconSmallSize">16</x:Double>
    <x:Double x:Key="IconSize">24</x:Double>
    <x:Double x:Key="IconLargeSize">32</x:Double>
    <x:Double x:Key="IconXLSize">48</x:Double>

    <!-- Spacing Scale (8px grid system) -->
    <x:Double x:Key="SpacingXXS">2</x:Double>
    <x:Double x:Key="SpacingXS">4</x:Double>
    <x:Double x:Key="SpacingSM">8</x:Double>
    <x:Double x:Key="SpacingMD">12</x:Double>
    <x:Double x:Key="SpacingBase">16</x:Double>
    <x:Double x:Key="SpacingLG">20</x:Double>
    <x:Double x:Key="SpacingXL">24</x:Double>
    <x:Double x:Key="SpacingXXL">32</x:Double>
    <x:Double x:Key="SpacingMassive">48</x:Double>

    <!-- Corner Radius Scale -->
    <x:Double x:Key="RadiusSM">8</x:Double>
    <x:Double x:Key="RadiusMD">12</x:Double>
    <x:Double x:Key="RadiusBase">16</x:Double>
    <x:Double x:Key="RadiusLG">20</x:Double>
    <x:Double x:Key="RadiusRound">999</x:Double>

    <!-- Card Padding/Margin (8px grid) -->
    <Thickness x:Key="CardPadding">16</Thickness>
    <Thickness x:Key="CardMargin">12</Thickness>
    <Thickness x:Key="CardPaddingLarge">20</Thickness>
    <Thickness x:Key="CardPaddingCompact">12</Thickness>
    <Thickness x:Key="CardMarginVertical">8,0</Thickness>
    <Thickness x:Key="PagePadding">16</Thickness>
    <Thickness x:Key="PageMargin">16</Thickness>
    <Thickness x:Key="SectionMargin">0,12</Thickness>

    <!-- FontAwesome Font Family -->
    <OnPlatform x:Key="IconFontFamily" x:TypeArguments="x:String">
        <On Platform="Android" Value="FontAwesomeSolid.otf#Font Awesome 6 Free Solid" />
        <On Platform="iOS" Value="FontAwesomeSolid" />
        <On Platform="WinUI" Value="ms-appx:///Assets/Fonts/FontAwesomeSolid.otf#Font Awesome 6 Free" />
        <On Platform="MacCatalyst" Value="FontAwesomeSolid" />
    </OnPlatform>

    <!-- ====================================== -->
    <!-- IMPLICIT STYLES: Base Controls -->
    <!-- Auto-applied to all instances -->
    <!-- ====================================== -->

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
    </Style>

    <Style TargetType="IndicatorView">
        <Setter Property="IndicatorColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}"/>
        <Setter Property="SelectedIndicatorColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"/>
    </Style>

    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource OutlineColor}, Dark={StaticResource OutlineColor}}" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
        <Setter Property="StrokeThickness" Value="0.5"/>
    </Style>

    <Style TargetType="BoxView">
        <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnPrimaryColor}, Dark={StaticResource OnPrimaryColor}}" />
