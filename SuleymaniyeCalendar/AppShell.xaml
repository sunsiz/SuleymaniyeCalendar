<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SuleymaniyeCalendar.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SuleymaniyeCalendar"
    xmlns:views="clr-namespace:SuleymaniyeCalendar.Views"
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    FlowDirection="{DynamicResource FlowDirection}"
    Style="{StaticResource ShellFlyoutStyle}"
    FlyoutBehavior="Disabled">

    <Shell.TitleView>
        <Label
            Text="Suleymaniye Calendar"
            TextColor="{AppThemeBinding Light={StaticResource OnSurfaceLight}, Dark={StaticResource OnSurfaceDark}}"
            FontFamily="MontserratMedium"
            FontSize="20"
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center" />
    </Shell.TitleView>

    <TabBar>
        <ShellContent Title="{localization:Translate Takvim}" ContentTemplate="{DataTemplate views:MainPage}" >
            <ShellContent.Icon>
                <FontImageSource FontFamily="{StaticResource IconFontFamily}" Glyph="&#xf073;" Size="28" Color="{AppThemeBinding Light={StaticResource OnSurfaceVariantLight}, Dark={StaticResource OnSurfaceVariantDark}}" />
            </ShellContent.Icon>
        </ShellContent>
        <ShellContent Title="{localization:Translate Kible}" ContentTemplate="{DataTemplate views:CompassPage}" >
            <ShellContent.Icon>
                <FontImageSource FontFamily="{StaticResource IconFontFamily}" Glyph="&#xf66b;" Size="28" Color="{AppThemeBinding Light={StaticResource OnSurfaceVariantLight}, Dark={StaticResource OnSurfaceVariantDark}}" />
            </ShellContent.Icon>
        </ShellContent>
        <ShellContent Title="{localization:Translate Radyo}" ContentTemplate="{DataTemplate views:RadioPage}" >
            <ShellContent.Icon>
                <FontImageSource FontFamily="{StaticResource IconFontFamily}" Glyph="&#xf8d7;" Size="28" Color="{AppThemeBinding Light={StaticResource OnSurfaceVariantLight}, Dark={StaticResource OnSurfaceVariantDark}}" />
            </ShellContent.Icon>
        </ShellContent>
        <ShellContent Title="{localization:Translate Hakkinda}" ContentTemplate="{DataTemplate views:AboutPage}" >
            <ShellContent.Icon>
                <FontImageSource FontFamily="{StaticResource IconFontFamily}" Glyph="&#xf66f;" Size="28" Color="{AppThemeBinding Light={StaticResource OnSurfaceVariantLight}, Dark={StaticResource OnSurfaceVariantDark}}" />
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>

</Shell>
