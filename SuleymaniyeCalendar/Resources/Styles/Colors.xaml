<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Core neutrals and basics -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>
    
    <!-- Optional brushes for neutrals (kept minimal) -->
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}" />
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}" />
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}" />
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}" />
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}" />
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}" />
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}" />
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}" />
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}" />

    <!-- Brand palette (modernized, matching logo primary brown with complementary teal) -->
    <Color x:Key="AppBackgroundColor">#FAF7F5</Color>
    <Color x:Key="AppBackgroundColorDark">#121212</Color>
    <Color x:Key="PrimaryColor">#5C3021</Color>
    <Color x:Key="PrimaryLightColor">#7A4B3A</Color>
    <Color x:Key="PrimaryDarkColor">#3D1710</Color>
    <Color x:Key="PrimaryTextColor">#1F1511</Color>
    <Color x:Key="PrimaryAccent50Color">#FFEDE3</Color>
    <Color x:Key="PrimaryAccent100Color">#E6CFC3</Color>
    <Color x:Key="PrimaryAccent400Color">#9C6C59</Color>
    <Color x:Key="PrimaryAccent600Color">#6C3B2A</Color>
    <Color x:Key="PrimaryAccent800Color">#4D241A</Color>
    <Color x:Key="PrimaryAccent900Color">#3D1710</Color>
    <Color x:Key="SecondaryColor">#146C6F</Color>
    <Color x:Key="TertiaryDarkColor">#0E7A3C</Color>

    <!-- Dark elevations -->
    <Color x:Key="DarkElevation2dp">#212121</Color>
    <Color x:Key="DarkElevation8dp">#2D2D2D</Color>
    <Color x:Key="DarkElevation12dp">#323232</Color>
    <Color x:Key="DarkElevation16dp">#353535</Color>
    <Color x:Key="DarkElevation24dp">#373737</Color>

    <Color x:Key="OnPrimaryColor">#000000</Color>
    <Color x:Key="OnSecondaryColor">#000000</Color>
    <Color x:Key="TransparentColor">Transparent</Color>

    <!-- Status colors for prayer list (soft tints with accessible contrast) -->
    <Color x:Key="PastTimeBackgroundColor">#F4ECE8</Color>
    <Color x:Key="PastTimeBackgroundColorDark">#262626</Color>
    <Color x:Key="CurrentTimeBackgroundColor">#EAF6EF</Color>
    <Color x:Key="CurrentTimeBackgroundColorDark">#17351C</Color>
    <Color x:Key="FutureTimeBackgroundColor">#E8F3F5</Color>
    <Color x:Key="FutureTimeBackgroundColorDark">#1C2F35</Color>
    <Color x:Key="TimeTextColor">#53382E</Color>
    <Color x:Key="TimeTextColorDark">#F2E8E3</Color>

    <!-- Semantic colors consistent with primary brown palette -->
    <Color x:Key="SuccessColor">#8C5A49</Color>
    <Color x:Key="SuccessColorDark">#B07A6B</Color>
    <Color x:Key="WarningColor">#D2691E</Color>
    <Color x:Key="WarningColorDark">#DEB887</Color>
    <Color x:Key="ErrorColor">#8B0000</Color>
    <Color x:Key="ErrorColorDark">#CD5C5C</Color>
    <Color x:Key="InfoColor">#6C3B2A</Color>
    <Color x:Key="InfoColorDark">#8C5A49</Color>

    <!-- Prayer Time States (refined) -->
    <Color x:Key="PrayerActiveBackgroundColor">#EAF6EF</Color>
    <Color x:Key="PrayerActiveBackgroundColorDark">#18361D</Color>
    <Color x:Key="PrayerPastBackgroundColor">#F2F0EE</Color>
    <Color x:Key="PrayerPastBackgroundColorDark">#242424</Color>
    <Color x:Key="PrayerUpcomingBackgroundColor">#FFF1E6</Color>
    <Color x:Key="PrayerUpcomingBackgroundColorDark">#3A2819</Color>
    
    <!-- Modern Interactive States -->
    <Color x:Key="InteractiveHoverColor">#F0F0F0</Color>
    <Color x:Key="InteractiveHoverColorDark">#404040</Color>
    <Color x:Key="InteractivePressedColor">#E0E0E0</Color>
    <Color x:Key="InteractivePressedColorDark">#505050</Color>
    
    <!-- Enhanced Focus and Accessibility - consistent with primary palette -->
    <Color x:Key="FocusRingColor">#8C5A49</Color>
    <Color x:Key="FocusRingColorDark">#B07A6B</Color>
    <Color x:Key="HighContrastTextColor">#000000</Color>
    <Color x:Key="HighContrastTextColorDark">#FFFFFF</Color>

    <Color x:Key="CityBackgroundColor">#157D83</Color>
    <Color x:Key="CityBackgroundColorDark">#0D2A2F</Color>
    <Color x:Key="MonthlyButtonBackgroundColor">#146C6F</Color>
    <Color x:Key="MonthlyButtonBackgroundColorDark">#0F4E51</Color>
    <Color x:Key="CardBackgroundColor">#FBF8F6</Color>
    <Color x:Key="CardBackgroundColorDark">#1E1E1E</Color>
    <Color x:Key="ButtonTextColor">#FFFFFF</Color>
    <Color x:Key="ButtonTextColorDark">#FFFFFF</Color>

    <!-- Tab bar -->
    <Color x:Key="TabBarBackgroundColorDark">#353535</Color>
    <Color x:Key="TabBarBgColor">#7B4B3A</Color>
    <Color x:Key="TabBarSelectedColor">#FFFFFF</Color>
    <Color x:Key="TabBarUnselectedColor">#E6D7CF</Color>

    <!-- Surfaces and outlines (Material-inspired) -->
    <Color x:Key="SurfaceColor">#F8F3F1</Color>
    <Color x:Key="SurfaceColorDark">#141414</Color>
    <Color x:Key="SurfaceVariantColor">#EFE3DE</Color>
    <Color x:Key="SurfaceVariantColorDark">#222222</Color>
    <Color x:Key="OnSurfaceColor">#2A1D18</Color>
    <Color x:Key="OnSurfaceColorDark">#E8DCD6</Color>
    <Color x:Key="OutlineColor">#E5D7D0</Color>
    <Color x:Key="OutlineColorDark">#3A322E</Color>

    <!-- Scrims and overlays -->
    <Color x:Key="BusyOverlayColor">#80000000</Color>
    <Color x:Key="BusyOverlayColorDark">#80FFFFFF</Color>
</ResourceDictionary>