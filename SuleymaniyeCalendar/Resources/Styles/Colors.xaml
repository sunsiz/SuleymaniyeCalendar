    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  PHASE 5.2.4 - GLASSMORPHISM GRADIENT BRUSHES  -->
    <!--  Material Design 3 + Glassmorphism: Subtle gradients with top highlight  -->
    <!--  Combines vibrant solid colors with premium glass depth effect  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->

    <!--  Past Prayer - Complex matte gray with multiple depth layers  -->
    <LinearGradientBrush x:Key="PrayerCardPastGradientLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#F0EDED" Offset="0" />      <!-- Brilliant top glass highlight -->
        <GradientStop Color="#ECE9E9" Offset="0.15" />   <!-- Upper reflection layer -->
        <GradientStop Color="#E0DEDEDE" Offset="0.4" />  <!-- Base gray (core color) -->
        <GradientStop Color="#D8D5D5" Offset="0.75" />   <!-- Mid depth transition -->
        <GradientStop Color="#D0CDCD" Offset="1" />      <!-- Deep matte shadow -->
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="PrayerCardPastGradientDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#454040" Offset="0" />      <!-- Brilliant top glass highlight -->
        <GradientStop Color="#3A3535" Offset="0.15" />   <!-- Upper reflection layer -->
        <GradientStop Color="#252525" Offset="0.4" />    <!-- Base dark gray (core color) -->
        <GradientStop Color="#1A1818" Offset="0.75" />   <!-- Mid depth transition -->
        <GradientStop Color="#121010" Offset="1" />      <!-- Deep shadow -->
    </LinearGradientBrush>

    <!--  Current Prayer - Ultra green with intense glass reflection and multiple depth layers  -->
    <LinearGradientBrush x:Key="PrayerCardCurrentGradientLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#E0F8E7" Offset="0" />      <!-- Brilliant top highlight (intense glass) -->
        <GradientStop Color="#D0F5DA" Offset="0.12" />   <!-- Upper glass reflection layer -->
        <GradientStop Color="#B8F0C5" Offset="0.35" />   <!-- Base ultra green (core color) -->
        <GradientStop Color="#A8E8B5" Offset="0.7" />    <!-- Mid depth transition -->
        <GradientStop Color="#98E0A5" Offset="1" />      <!-- Deep rich green shadow -->
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="PrayerCardCurrentGradientDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#507050" Offset="0" />      <!-- Brilliant top highlight (intense glass) -->
        <GradientStop Color="#3F5F42" Offset="0.12" />   <!-- Upper glass reflection layer -->
        <GradientStop Color="#2D4A2D" Offset="0.35" />   <!-- Base dark green (core color) -->
        <GradientStop Color="#1F3A1F" Offset="0.7" />    <!-- Mid depth transition -->
        <GradientStop Color="#152A15" Offset="1" />      <!-- Deep shadow -->
    </LinearGradientBrush>

    <!--  Upcoming Prayer - Ultra amber with intense warm glass glow and multiple depth layers  -->
    <LinearGradientBrush x:Key="PrayerCardUpcomingGradientLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFCF0" Offset="0" />      <!-- Brilliant warm highlight (intense glow) -->
        <GradientStop Color="#FFF5D0" Offset="0.12" />   <!-- Upper glass glow layer -->
        <GradientStop Color="#FFE8A0" Offset="0.35" />   <!-- Base ultra amber (core color) -->
        <GradientStop Color="#FFD980" Offset="0.7" />    <!-- Mid warm depth transition -->
        <GradientStop Color="#FFCC60" Offset="1" />      <!-- Deep rich golden shadow -->
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="PrayerCardUpcomingGradientDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#6A5A45" Offset="0" />      <!-- Brilliant warm highlight (intense glow) -->
        <GradientStop Color="#5A4A35" Offset="0.12" />   <!-- Upper glass glow layer -->
        <GradientStop Color="#3A3320" Offset="0.35" />   <!-- Base dark amber (core color) -->
        <GradientStop Color="#2A2318" Offset="0.7" />    <!-- Mid warm depth transition -->
        <GradientStop Color="#1A1810" Offset="1" />      <!-- Deep shadow -->
    </LinearGradientBrush>

