<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  CELESTIAL TWILIGHT - App & Page Background Brushes  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->

    <!--  App Background: A subtle gradient from a light tertiary to the base surface color.  -->
    <LinearGradientBrush x:Key="AppBackgroundBrushLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource Tertiary10}" Offset="0.0" />
        <GradientStop Color="{StaticResource SurfaceContainerLowLight}" Offset="1.0" />
    </LinearGradientBrush>

    <!--  App Background Dark: A deep, dark gradient creating a sense of space.  -->
    <LinearGradientBrush x:Key="AppBackgroundBrushDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource Tertiary10}" Offset="0.0" />
        <GradientStop Color="{StaticResource SurfaceContainerLowDark}" Offset="1.0" />
    </LinearGradientBrush>

    <!--  Theme-Aware App Background Brush  -->
    <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{AppThemeBinding Light={StaticResource Tertiary10}, Dark={StaticResource Tertiary95}}" Offset="0.0" />
        <GradientStop Color="{AppThemeBinding Light={StaticResource SurfaceContainerLowLight}, Dark={StaticResource SurfaceContainerLowDark}}" Offset="1.0" />
    </LinearGradientBrush>

    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  PRAYER STATE BRUSHES - Dynamic gradients for prayer cards.  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->

    <!--  Current Prayer Brush: A vibrant, attention-grabbing cyan gradient.  -->
    <LinearGradientBrush x:Key="CurrentPrayerBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{AppThemeBinding Light={StaticResource Secondary30}, Dark={StaticResource Secondary70}}" Offset="0.0" />
        <GradientStop Color="{AppThemeBinding Light={StaticResource Secondary50}, Dark={StaticResource Secondary50}}" Offset="1.0" />
    </LinearGradientBrush>

    <!--  Upcoming Prayer Brush: A calm, inviting blue gradient.  -->
    <LinearGradientBrush x:Key="UpcomingPrayerBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{AppThemeBinding Light={StaticResource Primary30}, Dark={StaticResource Primary70}}" Offset="0.0" />
        <GradientStop Color="{AppThemeBinding Light={StaticResource Primary50}, Dark={StaticResource Primary50}}" Offset="1.0" />
    </LinearGradientBrush>

    <!--  Past Prayer Brush: A muted, subtle gray gradient.  -->
    <LinearGradientBrush x:Key="PastPrayerBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{AppThemeBinding Light={StaticResource Tertiary80}, Dark={StaticResource Tertiary30}}" Offset="0.0" />
        <GradientStop Color="{AppThemeBinding Light={StaticResource Tertiary90}, Dark={StaticResource Tertiary20}}" Offset="1.0" />
    </LinearGradientBrush>

    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  UI COMPONENT BRUSHES - Brushes for various UI elements.  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->

    <!--  Primary Gradient Brush: A general-purpose primary color gradient.  -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Primary40}" Offset="0.0" />
        <GradientStop Color="{StaticResource Primary60}" Offset="1.0" />
    </LinearGradientBrush>

    <!--  Secondary Gradient Brush: A general-purpose secondary color gradient.  -->
    <LinearGradientBrush x:Key="SecondaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Secondary40}" Offset="0.0" />
        <GradientStop Color="{StaticResource Secondary60}" Offset="1.0" />
    </LinearGradientBrush>

    <!--  Hero Current Prayer Border: A radiant border for the current prayer time.  -->
    <RadialGradientBrush x:Key="HeroCurrentPrayerBorderBrush" Center="0.5,0.5" Radius="1.0">
        <GradientStop Color="{StaticResource Secondary40}" Offset="0.0" />
        <GradientStop Color="{StaticResource Primary50}" Offset="0.5" />
        <GradientStop Color="{StaticResource Primary70}" Offset="1.0" />
    </RadialGradientBrush>

    <!--  Frosted Glass Brushes: Simulating a frosted glass effect.  -->
    <LinearGradientBrush x:Key="PrimaryGlassBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#E6FFFFFF" Offset="0" />
        <GradientStop Color="{StaticResource Primary10}" Offset="0.4" />
        <GradientStop Color="#CCFFFFFF" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SecondaryGlassBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#E6FFFFFF" Offset="0" />
        <GradientStop Color="{StaticResource Secondary10}" Offset="0.4" />
        <GradientStop Color="#CCFFFFFF" Offset="1" />
    </LinearGradientBrush>

    <!--  Surface Glass Brushes: Theme-aware glass container brushes.  -->
    <LinearGradientBrush x:Key="SurfaceGlassBrushLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#F2FFFBFB" Offset="0" />
        <GradientStop Color="{StaticResource SurfaceContainerLight}" Offset="0.5" />
        <GradientStop Color="#E0F8F1F1" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SurfaceGlassBrushDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#26FFFFFF" Offset="0" />
        <GradientStop Color="{StaticResource SurfaceContainerDark}" Offset="0.5" />
        <GradientStop Color="#80FFFFFF" Offset="1" />
    </LinearGradientBrush>

    <!--  Shadow Brushes: For creating depth and elevation.  -->
    <SolidColorBrush x:Key="ShadowOverlayBrush" Color="#20000000" />
    <SolidColorBrush x:Key="StrongShadowOverlayBrush" Color="#33000000" />

</ResourceDictionary>