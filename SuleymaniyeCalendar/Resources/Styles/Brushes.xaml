<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  PHASE 21: CLEAN MODERN DESIGN - Solid Backgrounds, No Gradients ✨  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->

    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  1. SOLID CARD BACKGROUNDS - Clear & Readable  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->

    <!--  Standard Card - SOLID WHITE/DARK (100% opaque)  -->
    <SolidColorBrush x:Key="GlassCardBrushLight" Color="#FFFFFF" />           <!-- Pure white -->
    <SolidColorBrush x:Key="GlassCardBrushDark" Color="#1C1B20" />            <!-- Clean dark -->
    <SolidColorBrush x:Key="GlassCardBrush" Color="{AppThemeBinding Light=#FFFFFF, Dark=#1C1B20}" />

    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  2. CURRENT PRAYER CARD - White/Dark with Brown Left Border  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->

    <!--  Current Prayer - SOLID (same as standard, brown border added in style)  -->
    <SolidColorBrush x:Key="CurrentPrayerGlassBrushLight" Color="#FFFFFF" />
    <SolidColorBrush x:Key="CurrentPrayerGlassBrushDark" Color="#1C1B20" />
    <SolidColorBrush x:Key="CurrentPrayerGlassBrush" Color="{AppThemeBinding Light=#FFFFFF, Dark=#1C1B20}" />

    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  3. BUTTONS - Solid Colors, No Gradients  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->

    <!--  Primary Button - Brown Brand  -->
    <SolidColorBrush x:Key="PrimaryButtonBrush" Color="{StaticResource BrandBase}" />
    <SolidColorBrush x:Key="PrimaryButtonBrushLight" Color="{StaticResource BrandBase}" />
    <SolidColorBrush x:Key="PrimaryButtonBrushDark" Color="{StaticResource BrandDark}" />

    <!--  Glass Button - Subtle Gray  -->
    <SolidColorBrush x:Key="GlassButtonBrushLight" Color="#F5F5F5" />        <!-- Very light gray -->
    <SolidColorBrush x:Key="GlassButtonBrushDark" Color="#2F2D32" />         <!-- Subtle dark -->
    <SolidColorBrush x:Key="GlassButtonBrush" Color="{AppThemeBinding Light=#F5F5F5, Dark=#2F2D32}" />

    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  4. APP BACKGROUNDS - Solid, Clean  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->

    <!--  App Background - Light Mode (Soft warm gray)  -->
    <SolidColorBrush x:Key="AppBackgroundBrushLight" Color="#F5F1ED" />      <!-- Warm light gray -->

    <!--  App Background - Dark Mode (Clean dark)  -->
    <SolidColorBrush x:Key="AppBackgroundBrushDark" Color="#141218" />       <!-- Dark surface -->

    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  5. LEGACY COMPATIBILITY BRUSHES (Simplified)  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->

    <!--  Legacy: Hero Current Prayer (now uses glass + brown accent)  -->
    <LinearGradientBrush x:Key="HeroCurrentPrayerBrushLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#FFFFFFFF" />
        <GradientStop Offset="1.0" Color="#FFFFFCF8" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeroCurrentPrayerBrushDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#F02F2D32" />
        <GradientStop Offset="1.0" Color="#E8332F2F" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeroCurrentPrayerBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="{AppThemeBinding Light=#FFFFFFFF, Dark=#F02F2D32}" />
        <GradientStop Offset="1.0" Color="{AppThemeBinding Light=#FFFFFCF8, Dark=#E8332F2F}" />
    </LinearGradientBrush>

    <!--  Legacy: Hero Border (now solid brown)  -->
    <SolidColorBrush x:Key="HeroCurrentPrayerBorderBrush" Color="{StaticResource BrandBase}" />

    <!--  Legacy: Upcoming Prayer (subtle tint)  -->
    <LinearGradientBrush x:Key="UpcomingPrayerBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="{AppThemeBinding Light=#FFFFFCF8, Dark=#1F1C1B20}" />
        <GradientStop Offset="1.0" Color="{AppThemeBinding Light=#FFF8F0, Dark=#1A1C1B20}" />
    </LinearGradientBrush>

    <!--  Legacy: Past Prayer (neutral gray)  -->
    <LinearGradientBrush x:Key="PastPrayerBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="{AppThemeBinding Light=#F8F5F5F5, Dark=#E01C1B20}" />
        <GradientStop Offset="1.0" Color="{AppThemeBinding Light=#F0F0F0F0, Dark=#D8141218}" />
    </LinearGradientBrush>

    <!--  Legacy: Primary Glass Brush  -->
    <LinearGradientBrush x:Key="PrimaryGlassBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#F0FFFFFF" />
        <GradientStop Offset="1.0" Color="#E8FFFFFF" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SecondaryGlassBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#F0FFFFFF" />
        <GradientStop Offset="1.0" Color="#E8FFFFFF" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SurfaceGlassBrushLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#F8FFFFFF" />
        <GradientStop Offset="1.0" Color="#F0FFFFFF" />
    </LinearGradientBrush>

    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  6. SIMPLIFIED BUTTON BRUSHES (Solid Colors + Glass)  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->

    <!--  Primary Buttons (Brown Brand)  -->
    <SolidColorBrush x:Key="ButtonPrimaryFlatLight" Color="{StaticResource BrandBase}" />
    <SolidColorBrush x:Key="ButtonPrimaryFlatDark" Color="{StaticResource BrandDark}" />
    <SolidColorBrush x:Key="ButtonPrimaryIntenseLight" Color="{StaticResource BrandBase}" />
    <SolidColorBrush x:Key="ButtonPrimaryIntenseDark" Color="{StaticResource BrandDark}" />
    <SolidColorBrush x:Key="ButtonPrimarySuperIntenseLight" Color="{StaticResource BrandBase}" />
    <SolidColorBrush x:Key="ButtonPrimarySuperIntenseDark" Color="{StaticResource BrandDark}" />

    <!--  Secondary Buttons (Teal)  -->
    <SolidColorBrush x:Key="ButtonSecondaryFlatLight" Color="{StaticResource SecondaryBase}" />
    <SolidColorBrush x:Key="ButtonSecondaryFlatDark" Color="{StaticResource SecondaryDark}" />
    <SolidColorBrush x:Key="ButtonSecondaryIntenseLight" Color="{StaticResource SecondaryBase}" />
    <SolidColorBrush x:Key="ButtonSecondaryIntenseDark" Color="{StaticResource SecondaryDark}" />
    <SolidColorBrush x:Key="ButtonSecondarySuperIntenseLight" Color="{StaticResource SecondaryBase}" />
    <SolidColorBrush x:Key="ButtonSecondarySuperIntenseDark" Color="{StaticResource SecondaryDark}" />

    <!--  Success Buttons (Green)  -->
    <SolidColorBrush x:Key="ButtonSuccessFlatLight" Color="{StaticResource TertiaryBase}" />
    <SolidColorBrush x:Key="ButtonSuccessFlatDark" Color="{StaticResource TertiaryDark}" />
    <SolidColorBrush x:Key="ButtonSuccessIntenseLight" Color="{StaticResource TertiaryBase}" />
    <SolidColorBrush x:Key="ButtonSuccessIntenseDark" Color="{StaticResource TertiaryDark}" />
    <SolidColorBrush x:Key="ButtonSuccessSuperIntenseLight" Color="{StaticResource TertiaryBase}" />
    <SolidColorBrush x:Key="ButtonSuccessSuperIntenseDark" Color="{StaticResource TertiaryDark}" />

    <!--  Warning Buttons (Simplified)  -->
    <SolidColorBrush x:Key="ButtonWarningFlatLight" Color="{StaticResource Warning50}" />
    <SolidColorBrush x:Key="ButtonWarningFlatDark" Color="{StaticResource Warning80}" />
    <SolidColorBrush x:Key="ButtonWarningIntenseLight" Color="{StaticResource Warning50}" />
    <SolidColorBrush x:Key="ButtonWarningIntenseDark" Color="{StaticResource Warning80}" />
    <SolidColorBrush x:Key="ButtonWarningSuperIntenseLight" Color="{StaticResource Warning60}" />
    <SolidColorBrush x:Key="ButtonWarningSuperIntenseDark" Color="{StaticResource Warning80}" />

    <!--  Danger Buttons (Simplified)  -->
    <SolidColorBrush x:Key="ButtonDangerFlatLight" Color="{StaticResource Error50}" />
    <SolidColorBrush x:Key="ButtonDangerFlatDark" Color="{StaticResource Error80}" />
    <SolidColorBrush x:Key="ButtonDangerIntenseLight" Color="{StaticResource Error50}" />
    <SolidColorBrush x:Key="ButtonDangerIntenseDark" Color="{StaticResource Error80}" />
    <SolidColorBrush x:Key="ButtonDangerSuperIntenseLight" Color="{StaticResource Error60}" />
    <SolidColorBrush x:Key="ButtonDangerSuperIntenseDark" Color="{StaticResource Error80}" />

    <LinearGradientBrush x:Key="GlassStrongLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#FFFFFFFF" />
        <GradientStop Offset="1" Color="#F8FFFFFF" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GlassStrongDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#28FFFFFF" />
        <GradientStop Offset="1" Color="#24FFFFFF" />
    </LinearGradientBrush>

    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  8. ADDITIONAL GLASS EFFECTS & OVERLAYS  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->

    <!--  Subtle radial halo for hero cards  -->
    <RadialGradientBrush x:Key="PrimaryHaloBrush" Center="0.5,0.2" Radius="0.8">
        <GradientStop Offset="0" Color="#15C67B3B" />
        <GradientStop Offset="1" Color="Transparent" />
    </RadialGradientBrush>

    <!--  Elevated shadows as semi-transparent overlays  -->
    <SolidColorBrush x:Key="ShadowOverlayBrush" Color="#15000000" />
    <SolidColorBrush x:Key="StrongShadowOverlayBrush" Color="#25000000" />

    <!--  Glass stroke for borders  -->
    <SolidColorBrush x:Key="GlassStrokeBrush" Color="{AppThemeBinding Light=#20000000, Dark=#30FFFFFF}" />

    <!--  Glass container overlays  -->
    <SolidColorBrush x:Key="GlassContainerBrush" Color="#F0FFFFFF" />
    <SolidColorBrush x:Key="GlassContainerBrushDark" Color="#20FFFFFF" />

    <!--  Simplified gradients for legacy compatibility  -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="{StaticResource BrandLight}" />
        <GradientStop Offset="1" Color="{StaticResource BrandDark}" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SecondaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="{StaticResource SecondaryLight}" />
        <GradientStop Offset="1" Color="{StaticResource SecondaryDark}" />
    </LinearGradientBrush>

    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  9. FROSTED GLASS VARIANTS (Ultra Thin → Heavy)  -->
    <!--  ═══════════════════════════════════════════════════════════════════════════════════  -->
    <!--  Ultra Thin: barely-there film, almost fully transparent  -->
    <LinearGradientBrush x:Key="FrostGlassUltraThinLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#06FFFFFF" />
        <GradientStop Offset="0.55" Color="#08FFFFFF" />
        <GradientStop Offset="1" Color="#06FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FrostGlassUltraThinDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#05FFFFFF" />
        <GradientStop Offset="0.55" Color="#07FFFFFF" />
        <GradientStop Offset="1" Color="#05FFFFFF" />
    </LinearGradientBrush>

    <!--  Thin: light veil, subtle content separation  -->
    <LinearGradientBrush x:Key="FrostGlassThinLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#10FFFFFF" />
        <GradientStop Offset="0.55" Color="#18FFFFFF" />
        <GradientStop Offset="1" Color="#0EFFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FrostGlassThinDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#0CFFFFFF" />
        <GradientStop Offset="0.55" Color="#12FFFFFF" />
        <GradientStop Offset="1" Color="#0AFFFFFF" />
    </LinearGradientBrush>

    <!--  Medium: standard balanced frosted surface  -->
    <LinearGradientBrush x:Key="FrostGlassMediumLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#24FFFFFF" />
        <GradientStop Offset="0.55" Color="#34FFFFFF" />
        <GradientStop Offset="1" Color="#22FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FrostGlassMediumDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#18FFFFFF" />
        <GradientStop Offset="0.55" Color="#26FFFFFF" />
        <GradientStop Offset="1" Color="#14FFFFFF" />
    </LinearGradientBrush>

    <!--  Heavy: high diffusion, stronger separation  -->
    <LinearGradientBrush x:Key="FrostGlassHeavyLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#42FFFFFF" />
        <GradientStop Offset="0.55" Color="#54FFFFFF" />
        <GradientStop Offset="1" Color="#3EFFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FrostGlassHeavyDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#30FFFFFF" />
        <GradientStop Offset="0.55" Color="#40FFFFFF" />
        <GradientStop Offset="1" Color="#28FFFFFF" />
    </LinearGradientBrush>

    <!--  Opaque: near-solid frosted panel (still slight translucency)  -->
    <LinearGradientBrush x:Key="FrostGlassOpaqueLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#72FFFFFF" />
        <GradientStop Offset="0.55" Color="#82FFFFFF" />
        <GradientStop Offset="1" Color="#68FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FrostGlassOpaqueDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#50FFFFFF" />
        <GradientStop Offset="0.55" Color="#60FFFFFF" />
        <GradientStop Offset="1" Color="#48FFFFFF" />
    </LinearGradientBrush>

    <!--  Enhanced variants: Heavy Inner Edge, Opaque Inner Edge (simulated inner stroke via brighter edges) -->
    <LinearGradientBrush x:Key="FrostGlassHeavyInnerLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#62FFFFFF" />
        <GradientStop Offset="0.45" Color="#48FFFFFF" />
        <GradientStop Offset="1" Color="#62FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FrostGlassHeavyInnerDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#40FFFFFF" />
        <GradientStop Offset="0.45" Color="#28FFFFFF" />
        <GradientStop Offset="1" Color="#40FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FrostGlassOpaqueInnerLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#80FFFFFF" />
        <GradientStop Offset="0.5" Color="#70FFFFFF" />
        <GradientStop Offset="1" Color="#80FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FrostGlassOpaqueInnerDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#58FFFFFF" />
        <GradientStop Offset="0.5" Color="#48FFFFFF" />
        <GradientStop Offset="1" Color="#58FFFFFF" />
    </LinearGradientBrush>

    <!--  New high-opacity 'Frozen' and 'Crystal' tiers -->
    <LinearGradientBrush x:Key="FrostGlassFrozenLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#B5FFFFFF" />
        <GradientStop Offset="0.55" Color="#B0FFFFFF" />
        <GradientStop Offset="1" Color="#A0FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FrostGlassFrozenDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#1CFFFFFF" />
        <GradientStop Offset="0.55" Color="#16FFFFFF" />
        <GradientStop Offset="1" Color="#12FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FrostGlassCrystalLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#B2FFFFFF" />
        <GradientStop Offset="0.55" Color="#B8FFFFFF" />
        <GradientStop Offset="1" Color="#AEFFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FrostGlassCrystalDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#34FFFFFF" />
        <GradientStop Offset="0.55" Color="#32FFFFFF" />
        <GradientStop Offset="1" Color="#18FFFFFF" />
    </LinearGradientBrush>

    <!--  Localized backdrop for Frost Transparency Showcase (gives contrast in light mode)  -->
    <LinearGradientBrush x:Key="FrostShowcaseBackdropLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#FFF8F6F3" />
        <GradientStop Offset="0.55" Color="#FFF1EEE9" />
        <GradientStop Offset="1" Color="#FFE9E5DF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FrostShowcaseBackdropDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#1AFFFFFF" />
        <GradientStop Offset="0.6" Color="#12000000" />
        <GradientStop Offset="1" Color="#0E000000" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="NeoGlassPrimaryLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="{StaticResource Primary20}" />
        <GradientStop Offset="0.55" Color="{StaticResource Primary30}" />
        <GradientStop Offset="1" Color="{StaticResource Primary40}" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="NeoGlassPrimaryDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="{StaticResource Primary80}" />
        <GradientStop Offset="0.6" Color="{StaticResource Primary90}" />
        <GradientStop Offset="1" Color="{StaticResource Primary95}" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="NeoGlassSecondaryLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="{StaticResource Secondary20}" />
        <GradientStop Offset="0.55" Color="{StaticResource Secondary30}" />
        <GradientStop Offset="1" Color="{StaticResource Secondary40}" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="NeoGlassSecondaryDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="{StaticResource Secondary80}" />
        <GradientStop Offset="0.6" Color="{StaticResource Secondary90}" />
        <GradientStop Offset="1" Color="{StaticResource Secondary95}" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="NeoGlassTertiaryLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="{StaticResource Tertiary20}" />
        <GradientStop Offset="0.55" Color="{StaticResource Tertiary30}" />
        <GradientStop Offset="1" Color="{StaticResource Tertiary40}" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="NeoGlassTertiaryDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="{StaticResource Tertiary80}" />
        <GradientStop Offset="0.6" Color="{StaticResource Tertiary90}" />
        <GradientStop Offset="1" Color="{StaticResource Tertiary95}" />
    </LinearGradientBrush>

    <!--  Tinted glass (primary & secondary)  -->
    <LinearGradientBrush x:Key="GlassPrimaryTintLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#F2FFFFFF" />
        <GradientStop Offset="0.5" Color="{StaticResource Primary10}" />
        <GradientStop Offset="1" Color="#E6FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="GlassPrimaryTintDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#18FFFFFF" />
        <GradientStop Offset="0.5" Color="{StaticResource Primary95}" />
        <GradientStop Offset="1" Color="#12FFFFFF" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GlassSecondaryTintLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#F2FFFFFF" />
        <GradientStop Offset="0.5" Color="{StaticResource Secondary10}" />
        <GradientStop Offset="1" Color="#E6FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="GlassSecondaryTintDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#18FFFFFF" />
        <GradientStop Offset="0.5" Color="{StaticResource Secondary95}" />
        <GradientStop Offset="1" Color="#12FFFFFF" />
    </LinearGradientBrush>

    <!--  Accent gradient glass (subtle diagonal color wash)  -->
    <LinearGradientBrush x:Key="GlassAccentGradientLight" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#F8FFFFFF" />
        <GradientStop Offset="0.4" Color="{StaticResource GradientPrimaryStart}" />
        <GradientStop Offset="1" Color="#E6FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="GlassAccentGradientDark" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#14FFFFFF" />
        <GradientStop Offset="0.4" Color="{StaticResource GradientSecondaryEnd}" />
        <GradientStop Offset="1" Color="#10FFFFFF" />
    </LinearGradientBrush>

    <!--  Success / Warning / Error tinted glass variants  -->
    <LinearGradientBrush x:Key="GlassSuccessTintLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#F2FFFFFF" />
        <GradientStop Offset="0.5" Color="{StaticResource Success10}" />
        <GradientStop Offset="1" Color="#E6FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="GlassSuccessTintDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#18FFFFFF" />
        <GradientStop Offset="0.5" Color="{StaticResource Success95}" />
        <GradientStop Offset="1" Color="#12FFFFFF" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GlassWarningTintLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#F2FFFFFF" />
        <GradientStop Offset="0.5" Color="{StaticResource Warning10}" />
        <GradientStop Offset="1" Color="#E6FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="GlassWarningTintDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#18FFFFFF" />
        <GradientStop Offset="0.5" Color="{StaticResource Warning95}" />
        <GradientStop Offset="1" Color="#12FFFFFF" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GlassErrorTintLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#F2FFFFFF" />
        <GradientStop Offset="0.5" Color="{StaticResource Error10}" />
        <GradientStop Offset="1" Color="#E6FFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="GlassErrorTintDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#18FFFFFF" />
        <GradientStop Offset="0.5" Color="{StaticResource Error95}" />
        <GradientStop Offset="1" Color="#12FFFFFF" />
    </LinearGradientBrush>

    <!--  Duotone primary→secondary glass gradient  -->
    <LinearGradientBrush x:Key="GlassDuotoneLight" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="{StaticResource Tertiary10}" />
        <GradientStop Offset="0.5" Color="#F5FFFFFF" />
        <GradientStop Offset="1" Color="{StaticResource Secondary10}" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="GlassDuotoneDark" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="{StaticResource Tertiary90}" />
        <GradientStop Offset="0.5" Color="#11FFFFFF" />
        <GradientStop Offset="1" Color="{StaticResource Secondary90}" />
    </LinearGradientBrush>

    <!--  Edge highlight glass (brighter edges, clearer center)  -->
    <LinearGradientBrush x:Key="GlassEdgeHighlightLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#FFFFFFFF" />
        <GradientStop Offset="0.5" Color="#D0FFFFFF" />
        <GradientStop Offset="1" Color="#FFFFFFFF" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="GlassEdgeHighlightDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#33FFFFFF" />
        <GradientStop Offset="0.5" Color="#18FFFFFF" />
        <GradientStop Offset="1" Color="#33FFFFFF" />
    </LinearGradientBrush>

    <!--  Spotlight radial glass for hero / emphasis  -->
    <RadialGradientBrush x:Key="GlassSpotlightLight" Center="0.5,0.4" Radius="0.85">
        <GradientStop Offset="0" Color="#FFFFFFFF" />
        <GradientStop Offset="0.4" Color="#F2FFFFFF" />
        <GradientStop Offset="1" Color="#E0FFFFFF" />
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="GlassSpotlightDark" Center="0.5,0.4" Radius="0.85">
        <GradientStop Offset="0" Color="#33FFFFFF" />
        <GradientStop Offset="0.4" Color="#1AFFFFFF" />
        <GradientStop Offset="1" Color="#10FFFFFF" />
    </RadialGradientBrush>

    <!--  DEMO VARIANTS (more saturated & contrast for visual differentiation in About page)  -->
    <LinearGradientBrush x:Key="GlassDemoSuccessLight" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#CCFFFFFF" />
        <GradientStop Offset="0.5" Color="#88C888" />
