<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <x:String x:Key="IconFontFamily">FontAwesomeSolid</x:String>
    <x:Double x:Key="IconSmallFontSize">16</x:Double>
    <x:Double x:Key="IconMediumFontSize">20</x:Double>
    <x:Double x:Key="IconLargeFontSize">24</x:Double>
    <x:Double x:Key="IconLargerFontSize">28</x:Double>
    <x:Double x:Key="IconXLFontSize">48</x:Double>

    <!--  Material Design 3 Typography Scale - Refined & Professional  -->
    <x:Double x:Key="TinyFontSize">10</x:Double>
    <x:Double x:Key="CaptionFontSize">12</x:Double>
    <x:Double x:Key="BodySmallFontSize">13</x:Double>
    <x:Double x:Key="BodyFontSize">14</x:Double>
    <x:Double x:Key="BodyLargeFontSize">15</x:Double>
    <x:Double x:Key="DefaultFontSize">16</x:Double>
    <x:Double x:Key="SubHeaderFontSize">18</x:Double>
    <x:Double x:Key="TitleSmallFontSize">20</x:Double>
    <x:Double x:Key="HeaderFontSize">22</x:Double>
    <x:Double x:Key="TitleMediumFontSize">24</x:Double>
    <x:Double x:Key="TitleFontSize">28</x:Double>
    <x:Double x:Key="DisplaySmallFontSize">32</x:Double>
    <x:Double x:Key="DisplayFontSize">36</x:Double>

    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    <!-- 8PX GRID SYSTEM - Mobile-first consistent spacing (all multiples of 8) -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->

    <!--  Card Padding Constants - Internal spacing for cards  -->
    <Thickness x:Key="CardPaddingTight">12,8</Thickness>        <!-- Compact elements, list items -->
    <Thickness x:Key="CardPaddingDefault">16,12</Thickness>     <!-- Standard cards, settings -->
    <Thickness x:Key="CardPaddingComfy">20,16</Thickness>       <!-- Hero cards, emphasis -->
    <Thickness x:Key="CardPaddingSpacious">24,20</Thickness>    <!-- Large feature cards -->

    <!--  Card Margin Constants - Separation between cards  -->
    <Thickness x:Key="CardMarginList">8,4</Thickness>           <!-- List items (tight vertical) -->
    <Thickness x:Key="CardMarginCompact">8,6</Thickness>        <!-- Compact layouts -->
    <Thickness x:Key="CardMarginDefault">12,8</Thickness>       <!-- Standard separation -->
    <Thickness x:Key="CardMarginSpacer">16,12</Thickness>       <!-- Section separators -->

    <!--  Page Padding Constants - Edge spacing for mobile screens  -->
    <Thickness x:Key="PagePaddingMobile">16,8</Thickness>       <!-- Standard mobile padding -->
    <Thickness x:Key="PagePaddingWide">24,12</Thickness>        <!-- Larger phones, tablets -->

    <!--  Element Spacing - For StackLayout/Grid spacing properties  -->
    <x:Double x:Key="SpacingTight">8</x:Double>                 <!-- Tight grouping -->
    <x:Double x:Key="SpacingDefault">12</x:Double>              <!-- Standard spacing -->
    <x:Double x:Key="SpacingComfortable">16</x:Double>          <!-- Comfortable breathing room -->
    <x:Double x:Key="SpacingLoose">24</x:Double>                <!-- Section separators -->
    <x:Double x:Key="SpacingLG">16</x:Double>
    <x:Double x:Key="SpacingMD">10</x:Double>
    <x:Double x:Key="SpacingXS">4</x:Double>

    <!--  RadioButton - Selection controls  -->
    <Style TargetType="RadioButton">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceColor}, Dark={StaticResource OnSurfaceColorDark}}" />
        <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}" />
        <Setter Property="Padding" Value="{StaticResource CardMarginList}" />
        <Setter Property="MinimumHeightRequest" Value="48" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style x:Key="Label" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceColor}, Dark={StaticResource OnSurfaceColorDark}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}" />
        <Setter Property="LineHeight" Value="1.2" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceVariantLight}, Dark={StaticResource OnSurfaceVariantDark}}" />
                            <Setter Property="Opacity" Value="0.38" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    <Style x:Key="LabelStyle" BasedOn="{StaticResource Label}" TargetType="Label" />
    <Style x:Key="LabelSectionHeader" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource TitleFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="LineHeight" Value="1.3" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource UltraHighContrastOnPrimary}, Dark={StaticResource UltraHighContrastOnPrimaryDark}}" />
        <Setter Property="Margin" Value="0,0,0,4" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{AppThemeBinding Light=Transparent, Dark=#80000000}" Opacity="{AppThemeBinding Light=0.1, Dark=0.6}" Radius="3" Offset="1,1" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LabelMediumStyle" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="LineHeight" Value="1.2" />
    </Style>
    <Style x:Key="LabelLargeStyle" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.3" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceColor}, Dark={StaticResource OnSurfaceColorDark}}" />
    </Style>
    <Style x:Key="HeadlineMediumStyle" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource SubHeaderFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.35" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceColor}, Dark={StaticResource OnSurfaceColorDark}}" />
    </Style>
    <Style x:Key="HeadlineLargeStyle" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource TitleSmallFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.3" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceColor}, Dark={StaticResource OnSurfaceColorDark}}" />
    </Style>
    <Style x:Key="BodySmallStyle" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource BodySmallFontSize}" />
        <Setter Property="LineHeight" Value="1.3" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceVariantLight}, Dark={StaticResource OnSurfaceVariantDark}}" />
    </Style>
    <Style x:Key="BodyMediumStyle" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="LineHeight" Value="1.2" />
    </Style>
    <Style x:Key="BodyLargeStyle" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource BodyLargeFontSize}" />
        <Setter Property="LineHeight" Value="1.4" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceColor}, Dark={StaticResource OnSurfaceColorDark}}" />
    </Style>
    <Style x:Key="TitleSmallStyle" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.1" />
    </Style>
    <Style x:Key="TitleMediumStyle" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource TitleMediumFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.25" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Primary40}, Dark={StaticResource Primary60}}" />
        <Setter Property="Margin" Value="0,0,0,6" />
    </Style>
    <Style x:Key="TitleLargeStyle" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource TitleFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineHeight" Value="1.2" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Primary40}, Dark={StaticResource Primary60}}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>
    <Style x:Key="PrayerNameStyle" BasedOn="{StaticResource HeadlineMediumStyle}" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource DefaultFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource HighContrastOnSurface}, Dark={StaticResource HighContrastOnSurfaceDark}}" />
        <Setter Property="LineHeight" Value="1.2" />
        <Setter Property="Margin" Value="0,1" />
    </Style>
    <Style x:Key="PrayerTimeStyle" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource HighContrastPrimary}, Dark={StaticResource HighContrastPrimaryDark}}" />
        <Setter Property="LineHeight" Value="1.2" />
        <Setter Property="Margin" Value="0,1" />
    </Style>
    <Style x:Key="LocationStyle" BasedOn="{StaticResource Label}" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource DefaultFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Primary95}, Dark={StaticResource Primary10}}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="LineHeight" Value="1.3" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#80000000" Opacity="0.3" Radius="4" Offset="0,2" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LuminousCircularIcon" TargetType="Border">
        <Setter Property="WidthRequest" Value="{DynamicResource PlayButtonContainerSize}" />
        <Setter Property="HeightRequest" Value="{DynamicResource PlayButtonContainerSize}" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="{DynamicResource PlayButtonCornerRadius}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource GlassStrongLight}, Dark={StaticResource GlassStrongDark}}" />
        <Setter Property="Stroke" Value="{StaticResource GlassStrokeBrush}" />
        <Setter Property="StrokeThickness" Value="0.9" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource StrongShadowOverlayBrush}" Opacity="0.55" Radius="9" Offset="0,5" />
            </Setter.Value>
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Shadow">
                                <Shadow Brush="#16000000" Opacity="0.12" Radius="7" Offset="0,4" />
                            </Setter>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SurfaceContainerLowLight}, Dark={StaticResource SurfaceContainerLowDark}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    
    <Style x:Key="GoldenSlider" TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="{StaticResource Primary50}" />
        <Setter Property="MaximumTrackColor" Value="{AppThemeBinding Light=#E0E0E0, Dark=#424242}" />
        <Setter Property="ThumbColor" Value="{StaticResource Primary50}" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>
    <Style x:Key="PremiumGoldenSlider" BasedOn="{StaticResource GoldenSlider}" TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="{StaticResource Secondary50}" />
        <Setter Property="ThumbColor" Value="{StaticResource FocusIndicatorPrimary}" />
        <Setter Property="Scale" Value="1.1" />
    </Style>
    <Style x:Key="GoldenSwitch" TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource Primary50}" />
        <Setter Property="ThumbColor" Value="{StaticResource Primary50}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="On">
                        <VisualState.Setters>
                            <Setter Property="OnColor" Value="{StaticResource Primary30}" />
                            <Setter Property="ThumbColor" Value="{StaticResource Primary60}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Off">
                        <VisualState.Setters>
                            <Setter Property="ThumbColor" Value="{AppThemeBinding Light=#80E0E0E0, Dark=#424242}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Golden Picker - Dropdown selector -->
    <Style x:Key="GoldenPicker" TargetType="Picker">
        <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceColor}, Dark={StaticResource OnSurfaceColorDark}}" />
        <Setter Property="TitleColor" Value="{AppThemeBinding Light={StaticResource Primary95}, Dark={StaticResource Primary10}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SurfaceContainerLowestLight}, Dark={StaticResource SurfaceContainerDark}}" />
        <Setter Property="MinimumHeightRequest" Value="48" />
    </Style>

    <Style x:Key="Chip" TargetType="Border">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource HighContrastOutline}, Dark={StaticResource HighContrastOutlineDark}}" />
        <Setter Property="StrokeThickness" Value="1.5" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="MinimumHeightRequest" Value="32" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Selected">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary10}, Dark={StaticResource Primary90}}" />
                            <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource Primary40}}" />
                            <Setter Property="StrokeThickness" Value="3" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="GoldenActivityIndicator" TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource Primary40}, Dark={StaticResource Primary30}}" />
        <Setter Property="HeightRequest" Value="80" />
        <Setter Property="WidthRequest" Value="80" />
        <Setter Property="VerticalOptions" Value="Center" />        
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>



    <!--  Modern Image Button - Golden-enhanced with glow ✨  -->
    <Style x:Key="ModernImageButton" TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="WidthRequest" Value="56" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="MinimumHeightRequest" Value="48" />
        <Setter Property="MinimumWidthRequest" Value="48" />
        <Setter Property="Shadow">
            <Setter.Value>
                <!-- Subtle golden glow -->
                <Shadow Opacity="0.2" Radius="12" Offset="0,4" Brush="{AppThemeBinding Light=#40FFD700, Dark=#40FFD700}" />
            </Setter.Value>
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="1" />
                            <Setter Property="Scale" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.92" />
                            <Setter Property="Opacity" Value="0.75" />
                            <!-- Enhanced golden glow on press -->
                            <Setter Property="Shadow">
                                <Shadow Opacity="0.4" Radius="10" Offset="0,6" Brush="{AppThemeBinding Light=#60FFD700, Dark=#60FFD700}" />
                            </Setter>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="1.08" />
                            <!-- Stronger golden glow on hover -->
                            <Setter Property="Shadow">
                                <Shadow Opacity="0.5" Radius="14" Offset="0,8" Brush="{AppThemeBinding Light=#70FFD700, Dark=#70FFD700}" />
                            </Setter>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.38" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary40}, Dark={StaticResource Primary80}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=White, Dark=White}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="FontSize" Value="{DynamicResource DefaultFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{AppThemeBinding Light={StaticResource Primary40}, Dark={StaticResource Primary80}}" Opacity="0.18" Radius="12" Offset="0,3" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GlassButtonBase" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Padding" Value="18,10" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="CornerRadius" Value="18" />
        <Setter Property="FontSize" Value="{DynamicResource BodyFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceColor}, Dark={StaticResource OnSurfaceColorDark}}" />
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource GlassSoftLight}, Dark={StaticResource GlassSoftDark}}" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Opacity="0.18" Radius="7" Offset="0,4" />
            </Setter.Value>
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.95" />
                            <Setter Property="Opacity" Value="0.85" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="1.03" />
                            <Setter Property="Shadow">
                                <Shadow Opacity="0.28" Radius="12" Offset="0,6" />
                            </Setter>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="GlassButtonSecondary" TargetType="Button" BasedOn="{StaticResource GlassButtonBase}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <!-- Cream/golden backgrounds - VISIBLE! -->
                    <GradientStop Offset="0" Color="{AppThemeBinding Light=#FFFFFBF0, Dark=#FF3A3530}" />
                    <GradientStop Offset="0.5" Color="{AppThemeBinding Light=#FFFFF4D9, Dark=#FF2D2A25}" />
                    <GradientStop Offset="1" Color="{AppThemeBinding Light=#FFFFF8E8, Dark=#FF35322D}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource CardValueLight}, Dark={StaticResource Primary10}}" />
    </Style>

    <!--  🦸 PHASE 13: Outline Glass Button - Light cream/golden background with prominent border  -->
    <Style x:Key="GlassButtonOutline" TargetType="Button" BasedOn="{StaticResource GlassButtonBase}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <!-- Light cream/golden backgrounds - VISIBLE! -->
                    <GradientStop Offset="0" Color="{AppThemeBinding Light=#FFFFFAF0, Dark=#FF3C3833}" />
                    <GradientStop Offset="0.5" Color="{AppThemeBinding Light=#FFFFF2D9, Dark=#FF2E2B26}" />
                    <GradientStop Offset="1" Color="{AppThemeBinding Light=#FFFFF6E0, Dark=#FF36332E}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource CardValueLight}, Dark={StaticResource Primary30}}" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Opacity="0.3" Radius="8" Offset="0,6" Brush="{AppThemeBinding Light=#60FFD700, Dark=#50FFD700}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GlassButtonSuccess" TargetType="Button">
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource GlassSuccessTintLight}, Dark={StaticResource GlassSuccessTintDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource CardValueLight}, Dark={StaticResource Primary30}}" />
        <Setter Property="CornerRadius" Value="32" />
        <Setter Property="FontSize" Value="{DynamicResource DefaultFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{AppThemeBinding Light={StaticResource Primary40}, Dark={StaticResource Primary30}}" Opacity="0.18" Radius="12" Offset="0,3" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="GlassButtonWarning" TargetType="Button" BasedOn="{StaticResource GlassButtonBase}">
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource GlassWarningTintLight}, Dark={StaticResource GlassWarningTintDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource CardValueLight}, Dark={StaticResource Primary30}}" />
        <Setter Property="FontSize" Value="{DynamicResource DefaultFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{AppThemeBinding Light=#FFD700, Dark={StaticResource Primary30}}" Opacity="0.18" Radius="12" Offset="0,3" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  🦸 PHASE 13: Intense Glass Buttons - stronger golden gradients for emphasis  -->
    <Style x:Key="GlassButtonPrimaryIntense" TargetType="Button" BasedOn="{StaticResource GlassButtonBase}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <!-- Deeper golden - more saturated for "intense" -->
                    <GradientStop Offset="0" Color="{AppThemeBinding Light={StaticResource Primary40}, Dark=#AF5A4A30}" />
                    <GradientStop Offset="0.5" Color="{AppThemeBinding Light={StaticResource Primary50}, Dark=#AF4A3A22}" />
                    <GradientStop Offset="1" Color="{AppThemeBinding Light={StaticResource Primary40}, Dark=#AF5A4A30}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="TextColor" Value="{AppThemeBinding Light=White, Dark={StaticResource Primary30}}" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Opacity="0.45" Radius="10" Offset="0,0" Brush="{AppThemeBinding Light={StaticResource Primary30}, Dark={StaticResource Primary90}}" />
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="iOSLiquidGlassButton" BasedOn="{StaticResource GlassButtonBase}" TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="{AppThemeBinding Light={StaticResource Warning30}, Dark=#40FFFFFF}" />
                    <GradientStop Offset="0.5" Color="{AppThemeBinding Light={StaticResource Warning40}, Dark=#30FFFFFF}" />
                    <GradientStop Offset="1" Color="{AppThemeBinding Light={StaticResource Warning30}, Dark=#35FFFFFF}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource CardValueLight}, Dark={StaticResource Primary30}}" />
        <Setter Property="CornerRadius" Value="22" />
        <Setter Property="Padding" Value="20,12" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{AppThemeBinding Light=#50FFD700, Dark=#40FFD700}" Opacity="0.18" Radius="4" Offset="0,6" />
            </Setter.Value>
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.98" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.98" />
                            <Setter Property="Opacity" Value="0.95" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.6" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    <!--  🦸 PHASE 13: Vista / Aero Glass Button - Golden aero effect  -->
    <Style
        x:Key="VistaAeroGlassButton"
        BasedOn="{StaticResource GlassButtonBase}"
        TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <!--  Soft frosted golden aero gradient  -->
                    <GradientStop Offset="0" Color="{AppThemeBinding Light=#D8FFFAEB, Dark=#FF3D3A35}" />
                    <GradientStop Offset="0.5" Color="{AppThemeBinding Light=#C8FFF0D6, Dark=#FF2F2C27}" />
                    <GradientStop Offset="1" Color="{AppThemeBinding Light=#B8FFE8C6, Dark=#FF38352F}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource CardValueLight}, Dark={StaticResource Primary30}}" />
        <Setter Property="CornerRadius" Value="22" />
        <Setter Property="Padding" Value="18,10" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{AppThemeBinding Light={StaticResource Primary50}, Dark={StaticResource Primary90}}" Opacity="0.85" Radius="9" Offset="0,2" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="GlassButtonPillSecondary" BasedOn="{StaticResource GlassButtonSecondary}" TargetType="Button">
        <Setter Property="CornerRadius" Value="22" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="{AppThemeBinding Light=#FFFFFBF0, Dark=#FF3A3530}" />
                    <GradientStop Offset="0.5" Color="{AppThemeBinding Light=#FFFFF4D9, Dark=#FF2D2A25}" />
                    <GradientStop Offset="1" Color="{AppThemeBinding Light=#FFFFF8E8, Dark=#FF35322D}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource CardValueLight}, Dark={StaticResource Primary30}}" />
    </Style>


    <Style x:Key="Card" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SurfaceContainerLight}, Dark={StaticResource SurfaceContainerDark}}" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource OutlineVariantLight}, Dark={StaticResource OutlineVariantDark}}" />
        <Setter Property="StrokeThickness" Value="0.5" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="Margin" Value="4,3" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#12000000" Opacity="0.18" Radius="6" Offset="0,2" />
            </Setter.Value>
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Shadow">
                                <Shadow Brush="#16000000" Opacity="0.22" Radius="10" Offset="0,4" />
                            </Setter>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SurfaceContainerLowLight}, Dark={StaticResource SurfaceContainerLowDark}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    <Style x:Key="iOSLiquidGlassCard" BasedOn="{StaticResource Card}" TargetType="Border">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource GlassStrongLight}, Dark={StaticResource GlassStrongDark}}" />
        <Setter Property="Padding" Value="16,18" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{AppThemeBinding Light=#60FFD700, Dark=#60FFD700}" Opacity="0.20" Radius="7" Offset="0,2" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="FrostGlassCardCrystal" BasedOn="{StaticResource Card}" TargetType="Border">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Background"
                Value="{AppThemeBinding Light={StaticResource GlassStrongLight}, Dark={StaticResource GlassStrongDark}}" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light=#90FFD700, Dark=#90FFD700}" />
        <Setter Property="StrokeThickness" Value="0.15" />
        <Setter Property="Shadow">
            <Setter.Value>
                <!--  Enhanced golden glow  -->
                <Shadow Brush="{AppThemeBinding Light=#60FFD700, Dark=#60FFD700}" Opacity="0.20" Radius="7" Offset="0,2" />
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="FrostGlassCardFrozen" BasedOn="{StaticResource Card}" TargetType="Border">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource GlassSoftLight}, Dark={StaticResource GlassSoftDark}}" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light=#70D4AF37, Dark=#70FFD700}" />
        <Setter Property="StrokeThickness" Value="0.5" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{AppThemeBinding Light=#50FFD700, Dark=#50FFD700}" Opacity="0.25" Radius="10" Offset="0,16" />
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="GlassCardSecondaryTint" BasedOn="{StaticResource Card}" TargetType="Border">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource GlassSecondaryTintLight}, Dark={StaticResource GlassSecondaryTintDark}}" />
        <Setter Property="Stroke" Value="{StaticResource GlassStrokeBrush}" />
        <Setter Property="StrokeThickness" Value="0.75" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource StrongShadowOverlayBrush}" Opacity="0.35" Radius="8" Offset="0,8" />
            </Setter.Value>
        </Setter>
    </Style>


    <!-- ═══════════════════════════════════════════════════════════════════════════ -->
    <!--  🚀 PERFORMANCE-OPTIMIZED CARDS (Phase 5)                                   -->
    <!--  Solid colors instead of gradients for high-frequency rendering contexts    -->
    <!-- ═══════════════════════════════════════════════════════════════════════════ -->

    <!--  GlassCardOptimized - Solid color version for list performance  -->
    <Style x:Key="GlassCardOptimized" TargetType="Border" BasedOn="{StaticResource Card}">
        <!-- Use solid SurfaceVariantColor instead of gradient brush -->
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SurfaceVariantColor}, Dark={StaticResource SurfaceVariantColorDark}}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Stroke" Value="{StaticResource GlassStrokeBrush}" />
        <Setter Property="StrokeThickness" Value="0.75" />
        <!-- Reduced shadow complexity -->
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#1A000000" Radius="8" Offset="0,2" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  SettingsCardOptimized - Solid color version for list performance  -->
    <Style x:Key="SettingsCardOptimized" TargetType="Border" BasedOn="{StaticResource Card}">
        <!-- Use solid SolidColor instead of gradient brush -->
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Neutral10}, Dark={StaticResource Neutral99}}" />
        <Setter Property="Stroke" Value="{StaticResource GlassStrokeBrush}" />
        <Setter Property="StrokeThickness" Value="0.75" />
        <!-- Reduced shadow complexity -->
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#1A000000" Radius="4" Offset="0,0" />
            </Setter.Value>
        </Setter>
    </Style>

        <!--  PrayerCardOptimized - High-performance version for MainPage list  -->
    <!--  Prayer state colors (Past/Current/Future) are defined via DataTriggers in MainPage.xaml  -->
    <!--  This avoids duplication and uses automatic data binding instead of manual VisualStateManager calls  -->
    <Style x:Key="PrayerCardOptimized" TargetType="Border" BasedOn="{StaticResource GlassCardOptimized}">
        <!-- 8px grid system -->
        <Setter Property="Padding" Value="{StaticResource CardPaddingTight}" />
        <Setter Property="Margin" Value="{StaticResource CardMarginList}" />
        <Setter Property="StrokeShape" Value="RoundRectangle 14" />
        <Setter Property="MinimumHeightRequest" Value="60" />
        <Setter Property="StrokeThickness" Value="1.2" />
        <!-- Simpler shadow -->
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#1A000000" Radius="2" Offset="0,2" />
            </Setter.Value>
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <!--  Prayer state colors removed - handled by MainPage.xaml DataTriggers  -->
                <!--  This eliminates duplicate definitions and uses automatic data binding  -->
                <VisualStateGroup x:Name="InteractionStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <!-- 🎯 Phase 6: Enhanced mobile press feedback -->
                            <Setter Property="Opacity" Value="0.82" />               <!-- Stronger feedback -->
                            <Setter Property="Scale" Value="0.96" />                 <!-- More pronounced scale -->
                            <Setter Property="TranslationY" Value="2" />             <!-- Push-down effect -->
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Primary50}, Dark={StaticResource Primary40}}" />
                            <Setter Property="StrokeThickness" Value="3" />
                            <!-- No glow shadow for performance -->
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    <!-- IMPLICIT CONTROL STYLES - Base styles for all controls -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->

    <!--  ContentPage - App background color (keep simple; About page cards use GlassCard)  -->
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource AppBackgroundLight}, Dark={StaticResource AppBackgroundDark}}" />
        <Setter Property="Padding" Value="0" />
    </Style>


    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    <!-- PAGE AND SHELL STYLES - Layout and navigation -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->

    <!--  Page - Base page styling  -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource AppBackgroundLight}, Dark={StaticResource AppBackgroundDark}}" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!--  Shell - Navigation container  -->
    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <!-- Align nav bar background with bottom TabBar for brand consistency -->
        <Setter Property="Shell.BackgroundColor" Value="{AppThemeBinding Light={StaticResource TabBarBgColor}, Dark={StaticResource TabBarBackgroundColorDark}}" />
        <!-- Keep icons/content readable while aligning titles with theme -->
        <Setter Property="Shell.ForegroundColor" Value="{AppThemeBinding Light={StaticResource OnPrimaryColor}, Dark={StaticResource OnSurfaceColorDark}}" />
        <Setter Property="Shell.TitleColor" Value="{AppThemeBinding Light={StaticResource OnPrimaryColor}, Dark={StaticResource OnSurfaceColorDark}}" />
        <Setter Property="Shell.DisabledColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceVariantLight}, Dark={StaticResource OnSurfaceVariantDark}}" />
        <Setter Property="Shell.UnselectedColor" Value="{AppThemeBinding Light={StaticResource TabBarUnselectedColor}, Dark={StaticResource OnSurfaceVariantDark}}" />
        <Setter Property="Shell.NavBarHasShadow" Value="False" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{AppThemeBinding Light={StaticResource TabBarBgColor}, Dark={StaticResource TabBarBackgroundColorDark}}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{AppThemeBinding Light={StaticResource TabBarSelectedColor}, Dark={StaticResource OnSurfaceColorDark}}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{AppThemeBinding Light={StaticResource TabBarSelectedColor}, Dark={StaticResource OnSurfaceColorDark}}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{AppThemeBinding Light={StaticResource TabBarUnselectedColor}, Dark={StaticResource OnSurfaceVariantDark}}" />
    </Style>

    <!--  TabBar - Tab navigation  -->
    <Style TargetType="TabBar">
        <!-- Brand in light; neutral/surface in dark for better theme coherence -->
        <!--<Setter Property="Shell.TabBarBackgroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource TabBarBackgroundColorDark}}" />-->
        <!--<Setter Property="Shell.TabBarForegroundColor" Value="{AppThemeBinding Light={StaticResource TabBarSelectedColor}, Dark={StaticResource OnSurfaceColorDark}}" />-->
        <!--<Setter Property="Shell.TabBarTitleColor" Value="{AppThemeBinding Light={StaticResource TabBarSelectedColor}, Dark={StaticResource OnSurfaceColorDark}}" />-->
        <!--<Setter Property="Shell.TabBarUnselectedColor" Value="{AppThemeBinding Light={StaticResource TabBarUnselectedColor}, Dark={StaticResource OnSurfaceVariantDark}}" />-->
    </Style>

    <!--  ShellItem - Individual tab items  -->
    <Style TargetType="ShellItem">
        <Setter Property="Shell.ForegroundColor" Value="{AppThemeBinding Light={StaticResource TabBarSelectedColor}, Dark={StaticResource TabBarSelectedColor}}" />
        <Setter Property="Shell.UnselectedColor" Value="{AppThemeBinding Light={StaticResource TabBarUnselectedColor}, Dark={StaticResource TabBarUnselectedColor}}" />
    </Style>
</ResourceDictionary>
