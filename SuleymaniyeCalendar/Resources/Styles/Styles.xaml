                    <!-- inner subtle radial highlight -->
                    <BoxView Opacity="0.35">
                        <BoxView.Background>
                            <AppThemeBinding Light="{StaticResource GlassSpotlightLight}" Dark="{StaticResource GlassSpotlightDark}" />
