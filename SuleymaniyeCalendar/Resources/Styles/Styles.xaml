<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls">

    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    <!-- DESIGN SYSTEM FOUNDATION - Icons & Typography -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    
    <!--  Cross-platform FontAwesome family resolution via alias  -->
    <!-- Simple string alias for icon font (FontAwesome). Using plain string improves compiled XAML lookup reliability on Windows. -->
    <x:String x:Key="IconFontFamily">FontAwesomeSolid</x:String>

    <!--  Material Design 3 Typography Scale - Refined & Professional  -->
    <x:Double x:Key="TinyFontSize">10</x:Double>
    <x:Double x:Key="CaptionFontSize">12</x:Double>
    <x:Double x:Key="BodySmallFontSize">13</x:Double>
    <x:Double x:Key="BodyFontSize">14</x:Double>
    <x:Double x:Key="BodyLargeFontSize">15</x:Double>
    <x:Double x:Key="DefaultFontSize">16</x:Double>
    <x:Double x:Key="SubHeaderFontSize">18</x:Double>
    <x:Double x:Key="TitleSmallFontSize">20</x:Double>
    <x:Double x:Key="HeaderFontSize">22</x:Double>
    <x:Double x:Key="TitleMediumFontSize">24</x:Double>
    <x:Double x:Key="TitleFontSize">28</x:Double>
    <x:Double x:Key="DisplaySmallFontSize">32</x:Double>
    <x:Double x:Key="DisplayFontSize">36</x:Double>

    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    <!-- TYPOGRAPHY USAGE GUIDELINES (Mobile-First) -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    <!--
    DISPLAY STYLES (36-32pt):
    - DisplayLargeStyle (36pt): App launch screen, hero sections
    - DisplayMediumStyle (32pt): Major page headers (rarely used on mobile)

    TITLE STYLES (28-20pt):
    - TitleLargeStyle (28pt): Main page titles, dialog headers
    - TitleMediumStyle (24pt): Section headers (use sparingly on mobile)
    - TitleSmallStyle (20pt): Card titles (major cards only)

    HEADLINE STYLES (22-18pt):
    - HeadlineLargeStyle (22pt): Page section headers
    - HeadlineMediumStyle (18pt): Settings row labels, list headers ← RECOMMENDED FOR SETTINGS
    - HeadlineSmallStyle (18pt): Sub-section headers

    BODY STYLES (15-13pt):
    - BodyLargeStyle (15pt): Primary content text, important information
    - BodyMediumStyle (14pt): Standard UI text ← DEFAULT FOR MOST TEXT
    - BodySmallStyle (13pt): Supporting text, descriptions, metadata

    LABEL STYLES (14-12pt):
    - LabelLargeStyle (14pt): Button text, emphasized labels
    - LabelMediumStyle (12pt): Captions, small labels

    MOBILE BEST PRACTICES:
    - Use HeadlineMediumStyle (18pt) for Settings page labels (not TitleMediumStyle 24pt)
    - Use BodySmallStyle (13pt) for supporting text under settings
    - Avoid TitleLargeStyle on small screens (too large for mobile)
    - Ensure minimum 12pt for readability
    -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    
    <!--  Icon sizes that scale with typography  -->
    <x:Double x:Key="IconSmallSize">16</x:Double>
    <x:Double x:Key="IconMediumSize">20</x:Double>
    <x:Double x:Key="IconLargeSize">24</x:Double>
    <x:Double x:Key="IconXLSize">48</x:Double>
    <!-- Alias for DynamicResource used by FontImageSource.Size in views -->
    <x:Double x:Key="IconSmallFontSize">16</x:Double>
    <x:Double x:Key="IconMediumFontSize">20</x:Double>
    <x:Double x:Key="IconLargeFontSize">24</x:Double>
    <x:Double x:Key="IconXLFontSize">48</x:Double>
    
    <!--  Spacing Scale - Material Design 3 aligned with refined proportions  -->
    <x:Double x:Key="SpacingXXS">2</x:Double>
    <x:Double x:Key="SpacingXS">4</x:Double>
    <x:Double x:Key="SpacingSM">8</x:Double>
    <x:Double x:Key="SpacingMD">12</x:Double>
    <x:Double x:Key="SpacingLG">16</x:Double>
    <x:Double x:Key="SpacingXL">20</x:Double>
    <x:Double x:Key="SpacingXXL">24</x:Double>
    <x:Double x:Key="SpacingXXXL">32</x:Double>
    <x:Double x:Key="SpacingMassive">48</x:Double>
    
    <!--  Border Radius Scale  -->
    <x:Double x:Key="RadiusSM">8</x:Double>
    <x:Double x:Key="RadiusMD">12</x:Double>
    <x:Double x:Key="RadiusLG">16</x:Double>
    <x:Double x:Key="RadiusXL">24</x:Double>
    <x:Double x:Key="RadiusRound">999</x:Double>

    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    <!-- 8PX GRID SYSTEM - Mobile-first consistent spacing (all multiples of 8) -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->

    <!--  Card Padding Constants - Internal spacing for cards  -->
    <Thickness x:Key="CardPaddingTight">12,8</Thickness>        <!-- Compact elements, list items -->
    <Thickness x:Key="CardPaddingDefault">16,12</Thickness>     <!-- Standard cards, settings -->
    <Thickness x:Key="CardPaddingComfy">20,16</Thickness>       <!-- Hero cards, emphasis -->
    <Thickness x:Key="CardPaddingSpacious">24,20</Thickness>    <!-- Large feature cards -->

    <!--  Card Margin Constants - Separation between cards  -->
    <Thickness x:Key="CardMarginList">8,4</Thickness>           <!-- List items (tight vertical) -->
    <Thickness x:Key="CardMarginCompact">8,6</Thickness>        <!-- Compact layouts -->
    <Thickness x:Key="CardMarginDefault">12,8</Thickness>       <!-- Standard separation -->
    <Thickness x:Key="CardMarginSpacer">16,12</Thickness>       <!-- Section separators -->

    <!--  Page Padding Constants - Edge spacing for mobile screens  -->
    <Thickness x:Key="PagePaddingMobile">16,8</Thickness>       <!-- Standard mobile padding -->
    <Thickness x:Key="PagePaddingWide">24,12</Thickness>        <!-- Larger phones, tablets -->

    <!--  Element Spacing - For StackLayout/Grid spacing properties  -->
    <x:Double x:Key="SpacingTight">8</x:Double>                 <!-- Tight grouping -->
    <x:Double x:Key="SpacingDefault">12</x:Double>              <!-- Standard spacing -->
    <x:Double x:Key="SpacingComfortable">16</x:Double>          <!-- Comfortable breathing room -->
    <x:Double x:Key="SpacingLoose">24</x:Double>                <!-- Section separators -->

    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
