        <Setter Property="StrokeShape" Value="RoundRectangle 28" />
        <Setter Property="Padding" Value="20,16" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <!-- Deep cream-golden premium background -->
                    <GradientStop Offset="0" Color="{AppThemeBinding Light=#FFFFFEF8, Dark=#FF1A1814}" />
                    <GradientStop Offset="0.5" Color="{AppThemeBinding Light=#FFFFF8E8, Dark=#FF22201C}" />
                    <GradientStop Offset="1" Color="{AppThemeBinding Light=#FFFFFCF0, Dark=#FF1C1A16}" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Stroke">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
