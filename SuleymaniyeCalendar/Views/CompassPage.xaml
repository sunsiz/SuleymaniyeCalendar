<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="SuleymaniyeCalendar.Views.CompassPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    xmlns:viewModels="clr-namespace:SuleymaniyeCalendar.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewModels:CompassViewModel">

    <Shell.TitleView>
        <StackLayout Margin="10" HeightRequest="40" Orientation="Horizontal">
            <Label Style="{StaticResource LabelSectionHeader}"
                   Text="{localization:Translate KibleGostergesi}"
                   HorizontalOptions="StartAndExpand"
                   AutomationProperties.IsInAccessibleTree="True" />
            <Image Margin="10,0,20,0"
                   AutomationProperties.IsInAccessibleTree="True"
                   SemanticProperties.Description="{localization:Translate Yenile}">
                <Image.Source>
                    <FontImageSource FontFamily="FontAwesomeSolid" Glyph="&#xf2f1;" Size="26" />
                </Image.Source>
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding RefreshLocationCommand}" NumberOfTapsRequired="1" />
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
    </Shell.TitleView>

    <ContentPage.Content>
        <Grid>
            <ScrollView>
                <VerticalStackLayout Padding="12" Spacing="12">
                    <!-- Compass -->
                    <Grid Margin="0,8,0,0" HeightRequest="320">
                        <Image x:Name="CompassImage"
                               Source="kompas.png"
                               Aspect="AspectFit"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                        <Image x:Name="ImageArrow"
                               Source="isaretci.png"
                               Aspect="AspectFit"
                               Scale="0.55"
                               Rotation="{Binding Heading}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Grid>

                    <!-- Info card -->
                    <Border Style="{StaticResource Card}" Margin="8,4,8,16">
                        <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                            <Label Grid.Row="0"
                                   Style="{StaticResource CardInfoLabel}"
                                   Margin="0,0,0,2"
                                   Text="{Binding LatitudeAltitude}" />
                            <Label Grid.Row="1"
                                   Style="{StaticResource CardInfoLabel}"
                                   Text="{Binding DegreeLongitude}" />
                            <Button Grid.Row="2"
                                    Style="{StaticResource PrimaryButton}"
                                    Text="{localization:Translate HaritadaGoster}"
                                    Command="{Binding GoToMapCommand}" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </ScrollView>

            <!-- Busy overlay -->
            <Grid IsVisible="{Binding IsBusy}" BackgroundColor="#80000000">
                <ActivityIndicator IsRunning="True"
                                   Color="{StaticResource PrimaryColor}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>