<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SuleymaniyeCalendar.Views.ModernDialog"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    x:Name="DialogRoot"
    IsVisible="False"
    BackgroundColor="#80000000"
    HorizontalOptions="Fill"
    VerticalOptions="Fill">
    <Grid HorizontalOptions="Center" VerticalOptions="Center">
    <Border Style="{StaticResource HeroCard}" Padding="28,24" WidthRequest="320" MinimumHeightRequest="180">
            <VerticalStackLayout Spacing="18" HorizontalOptions="Fill">
                <Label x:Name="DialogTitle"
                       Text="Dialog Title"
                       Style="{StaticResource TitleFontSize}"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource OnSurfaceColor}, Dark={StaticResource OnSurfaceColorDark}}"
                       HorizontalTextAlignment="Center" />
                <Label x:Name="DialogMessage"
                       Text="Dialog message goes here."
                       Style="{StaticResource BodyLargeStyle}"
                       TextColor="{AppThemeBinding Light={StaticResource OnSurfaceVariantLight}, Dark={StaticResource OnSurfaceVariantDark}}"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap" />
                <HorizontalStackLayout Spacing="16" HorizontalOptions="Center">
                    <Button x:Name="PrimaryButton"
                            Style="{StaticResource ModernButton}"
                            Text="OK"
                            Clicked="OnPrimaryClicked" />
                    <Button x:Name="SecondaryButton"
                            Style="{StaticResource ModernButton}"
                            Text="Cancel"
                            IsVisible="False"
                            Clicked="OnSecondaryClicked" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentView>
