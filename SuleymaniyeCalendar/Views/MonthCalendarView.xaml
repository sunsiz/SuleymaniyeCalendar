<?xml version="1.0" encoding="utf-8" ?>
<!-- ðŸ—“ï¸ PHASE 20: Calendar Grid Month View - Beautiful Calendar UI -->
<ContentView
    x:Class="SuleymaniyeCalendar.Views.MonthCalendarView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    xmlns:viewModels="clr-namespace:SuleymaniyeCalendar.ViewModels"
    x:DataType="viewModels:MonthViewModel"
    FlowDirection="{DynamicResource FlowDirection}">

    <ScrollView>
        <VerticalStackLayout Spacing="12" Padding="0,16,0,0">

            <!-- Calendar Card -->
            <Border Style="{StaticResource Card}" Padding="12">
                <Border.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Left" Command="{Binding NextMonthCommand}" />
                    <SwipeGestureRecognizer Direction="Right" Command="{Binding PreviousMonthCommand}" />
                </Border.GestureRecognizers>

                <VerticalStackLayout Spacing="12">

                    <!-- Navigation Header -->
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="8">
                        <!-- Previous Month -->
                        <ImageButton Grid.Column="0" Style="{StaticResource IconButton}" Command="{Binding PreviousMonthCommand}" Source="arrow_left.png" />

                        <!-- Month/Year Title -->
                        <Label Grid.Column="1" Text="{Binding MonthYearDisplay}" Style="{StaticResource TitleLargeStyle}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />

                        <!-- Next Month -->
                        <ImageButton Grid.Column="2" Style="{StaticResource IconButton}" Command="{Binding NextMonthCommand}" Source="arrow_right.png" />

                        <!-- Today Button -->
                        <Button Grid.Column="3" Text="{localization:Translate Bugun}" Style="{StaticResource TonalButton}" Command="{Binding TodayCommand}" />
                    </Grid>

                    <!-- Divider -->
                    <BoxView Style="{StaticResource Divider}" />

                    <!-- Weekday Headers -->
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*" ColumnSpacing="4">
                        <Label Grid.Column="0" Text="{Binding WeekdayHeaders[0]}" Style="{StaticResource WeekdayLabelStyle}" />
                        <Label Grid.Column="1" Text="{Binding WeekdayHeaders[1]}" Style="{StaticResource WeekdayLabelStyle}" />
                        <Label Grid.Column="2" Text="{Binding WeekdayHeaders[2]}" Style="{StaticResource WeekdayLabelStyle}" />
                        <Label Grid.Column="3" Text="{Binding WeekdayHeaders[3]}" Style="{StaticResource WeekdayLabelStyle}" />
                        <Label Grid.Column="4" Text="{Binding WeekdayHeaders[4]}" Style="{StaticResource WeekdayLabelStyle}" />
                        <Label Grid.Column="5" Text="{Binding WeekdayHeaders[5]}" Style="{StaticResource WeekdayLabelStyle}" />
                        <Label Grid.Column="6" Text="{Binding WeekdayHeaders[6]}" Style="{StaticResource WeekdayLabelStyle}" />
                    </Grid>

                    <!-- Calendar Days Grid -->
                    <Grid x:Name="CalendarGrid"
                          ColumnDefinitions="*,*,*,*,*,*,*"
                          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                          ColumnSpacing="4"
                          RowSpacing="4" />

                </VerticalStackLayout>
            </Border>

            <!-- Selected Day Detail Card -->
            <Border x:Name="SelectedDayCard" Style="{StaticResource Card}" Padding="16" IsVisible="{Binding HasSelectedDayData}">
                <VerticalStackLayout Spacing="12">
                    <!-- Selected Date Header -->
                    <Label Text="{Binding SelectedDate, StringFormat='{0:dddd, dd MMMM yyyy}'}" Style="{StaticResource TitleMediumStyle}" />

                    <!-- Divider -->
                    <BoxView Style="{StaticResource Divider}" />

                    <!-- Prayer Times Grid -->
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="16" RowSpacing="8">

                        <!-- Fajr -->
                        <Label Grid.Row="0" Grid.Column="0" Text="{localization:Translate FecriKazip}" Style="{StaticResource BodyLargeStyle}" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding SelectedDayData.FalseFajr}" Style="{StaticResource BodyLargeStyle}" HorizontalTextAlignment="End" />

                        <!-- True Fajr -->
                        <Label Grid.Row="1" Grid.Column="0" Text="{localization:Translate FecriSadik}" Style="{StaticResource BodyLargeStyle}" FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding SelectedDayData.Fajr}" Style="{StaticResource BodyLargeStyle}" FontAttributes="Bold" HorizontalTextAlignment="End" />

                        <!-- Sunrise -->
                        <Label Grid.Row="2" Grid.Column="0" Text="{localization:Translate SabahSonu}" Style="{StaticResource BodyLargeStyle}" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding SelectedDayData.Sunrise}" Style="{StaticResource BodyLargeStyle}" HorizontalTextAlignment="End" />

                        <!-- Dhuhr -->
                        <Label Grid.Row="3" Grid.Column="0" Text="{localization:Translate Ogle}" Style="{StaticResource BodyLargeStyle}" FontAttributes="Bold" />
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding SelectedDayData.Dhuhr}" Style="{StaticResource BodyLargeStyle}" FontAttributes="Bold" HorizontalTextAlignment="End" />

                        <!-- Asr -->
                        <Label Grid.Row="4" Grid.Column="0" Text="{localization:Translate Ikindi}" Style="{StaticResource BodyLargeStyle}" FontAttributes="Bold" />
                        <Label Grid.Row="4" Grid.Column="1" Text="{Binding SelectedDayData.Asr}" Style="{StaticResource BodyLargeStyle}" FontAttributes="Bold" HorizontalTextAlignment="End" />

                        <!-- Maghrib -->
                        <Label Grid.Row="5" Grid.Column="0" Text="{localization:Translate Aksam}" Style="{StaticResource BodyLargeStyle}" FontAttributes="Bold" />
                        <Label Grid.Row="5" Grid.Column="1" Text="{Binding SelectedDayData.Maghrib}" Style="{StaticResource BodyLargeStyle}" FontAttributes="Bold" HorizontalTextAlignment="End" />

                        <!-- Isha -->
                        <Label Grid.Row="6" Grid.Column="0" Text="{localization:Translate Yatsi}" Style="{StaticResource BodyLargeStyle}" FontAttributes="Bold" />
                        <Label Grid.Row="6" Grid.Column="1" Text="{Binding SelectedDayData.Isha}" Style="{StaticResource BodyLargeStyle}" FontAttributes="Bold" HorizontalTextAlignment="End" />

                        <!-- End of Isha -->
                        <Label Grid.Row="7" Grid.Column="0" Text="{localization:Translate YatsiSonu}" Style="{StaticResource BodyLargeStyle}" />
                        <Label Grid.Row="7" Grid.Column="1" Text="{Binding SelectedDayData.EndOfIsha}" Style="{StaticResource BodyLargeStyle}" HorizontalTextAlignment="End" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentView>
