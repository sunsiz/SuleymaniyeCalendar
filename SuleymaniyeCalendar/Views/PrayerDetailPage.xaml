<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="SuleymaniyeCalendar.Views.PrayerDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:SuleymaniyeCalendar.ViewModels"
    x:DataType="viewModels:PrayerDetailViewModel"
    FlowDirection="{DynamicResource FlowDirection}">

    <ScrollView x:DataType="viewModels:PrayerDetailViewModel" VerticalScrollBarVisibility="Never">
        <VerticalStackLayout
            Padding="16"
            x:DataType="viewModels:PrayerDetailViewModel"
            Spacing="12">
            
            <!--  Compact Prayer Title Card  -->
            <Border Style="{StaticResource GlassCard}">
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeadlineLargeStyle}"
                        Text="{Binding Title}" />
                    <BoxView
                        HeightRequest="2"
                        HorizontalOptions="Center"
                        WidthRequest="60"
                        Color="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                Dark={StaticResource Primary30}}" />
                </VerticalStackLayout>
            </Border>

            <!--  Compact Time & Enable Card  -->
            <Border Style="{StaticResource GlassCard}">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="16" RowDefinitions="Auto,Auto" RowSpacing="12">
                    <!-- Time Section -->
                    <VerticalStackLayout Grid.Column="0" Grid.Row="0" Spacing="4">
                        <Label
                            Style="{StaticResource BodyMediumStyle}"
                            Text="{localization:Translate Vakti}"
                            TextColor="{AppThemeBinding Light={StaticResource Neutral60}, Dark={StaticResource Neutral80}}" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="{DynamicResource SubHeaderFontSize}"
                            Text="{Binding Time}"
                            TextColor="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource Primary30}}" />
                    </VerticalStackLayout>
                    
                    <!-- Enable Switch Section -->
                    <VerticalStackLayout Grid.Column="1" Grid.Row="0" HorizontalOptions="End" Spacing="4">
                        <Label
                            HorizontalTextAlignment="Center"
                            Style="{StaticResource BodySmallStyle}"
                            Text="{localization:Translate EtkinlestirSwitch}"
                            TextColor="{AppThemeBinding Light={StaticResource Neutral60}, Dark={StaticResource Neutral80}}" />
                        <Switch
                            HorizontalOptions="Center"
                            AutomationProperties.IsInAccessibleTree="True"
                            IsToggled="{Binding Enabled}"
                            OnColor="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                      Dark={StaticResource Primary30}}"
                            SemanticProperties.Description="{localization:Translate EtkinlestirSwitchAciklama}"
                            ThumbColor="{AppThemeBinding Light={StaticResource OnPrimaryColor},
                                                         Dark={StaticResource OnPrimaryColor}}" />
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!--  Advanced options (platform dependent)  -->
            <!--<Border IsVisible="{Binding ShowAdvancedOptions}" Style="{StaticResource Card}">
                <VerticalStackLayout Spacing="8">
