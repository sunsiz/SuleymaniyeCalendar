            <!--  Compact Notification Settings Card  -->
            <Border IsVisible="{Binding Enabled}" Style="{StaticResource GlassCard}">
                <VerticalStackLayout x:DataType="viewModels:PrayerDetailViewModel" Spacing="16">
                    <!--  Notification Time Section  -->
                    <VerticalStackLayout x:DataType="viewModels:PrayerDetailViewModel" Spacing="12">
                        <VerticalStackLayout Spacing="4">
                            <Label Style="{StaticResource TitleMediumStyle}" Text="{localization:Translate BildirmeZamani}" />
                            <Label Style="{StaticResource BodyMediumStyle}" TextColor="{AppThemeBinding Light={StaticResource Neutral60}, Dark={StaticResource Neutral80}}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            FontAttributes="Bold"
                                            FontSize="{DynamicResource DefaultFontSize}"
                                            Text="{Binding NotificationTime}" />
                                        <Span Text=" " />
                                        <Span Text="{localization:Translate DakikaOnceden}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>
                        
                        <Border
                            BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceVariantColor}, Dark={StaticResource SurfaceVariantColorDark}}"
                            Stroke="{AppThemeBinding Light={StaticResource OutlineColor}, Dark={StaticResource OutlineColorDark}}"
                            StrokeShape="RoundRectangle 12"
                            Padding="12,8">
                            <Slider
                                AutomationProperties.IsInAccessibleTree="true"
                                HeightRequest="36"
                                HorizontalOptions="Fill"
                                Maximum="60"
                                MaximumTrackColor="{AppThemeBinding Light={StaticResource Neutral60},
                                                                    Dark={StaticResource Neutral60}}"
                                Minimum="0"
                                MinimumTrackColor="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                                    Dark={StaticResource Primary30}}"
                                SemanticProperties.Description="{localization:Translate BildirmeZamani}"
                                ThumbColor="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                             Dark={StaticResource Primary30}}"
                                Value="{Binding NotificationTime}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Sound Selection Section  -->
                    <VerticalStackLayout Spacing="12">
                        <Label Style="{StaticResource TitleMediumStyle}" Text="{localization:Translate Birsessecin}" />
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <Border
                                Grid.Column="0"
                                BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceVariantColor},
                                                                  Dark={StaticResource SurfaceVariantColorDark}}"
                                Stroke="{AppThemeBinding Light={StaticResource OutlineColor},
                                                         Dark={StaticResource OutlineColorDark}}"
                                StrokeShape="RoundRectangle 12"
                                StrokeThickness="1"
                                Padding="12,8">
                                <Picker
                                    Title="{localization:Translate Birsessecin}"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Fill"
                                    ItemDisplayBinding="{Binding Name}"
                                    ItemsSource="{Binding AvailableSounds}"
                                    SelectedItem="{Binding SelectedSound}"
                                    TextColor="{AppThemeBinding Light={StaticResource OnSurfaceColor},
                                                                Dark={StaticResource OnSurfaceColorDark}}"
                                    FontSize="{DynamicResource DefaultFontSize}" />
                            </Border>
                                <Border
                                Grid.Column="1"
                                BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                                  Dark={StaticResource Primary80}}"
                                HeightRequest="48"
                                Stroke="Transparent"
                                StrokeShape="RoundRectangle 12"
                                WidthRequest="48">
                                <Button
                                    Padding="0"
                                    AutomationProperties.IsInAccessibleTree="True"
                                    BackgroundColor="Transparent"
                                    Command="{Binding TestButtonClickedCommand}"
                                    HeightRequest="48"
                                    SemanticProperties.Description="{localization:Translate AlarmSwitch}"
                                    WidthRequest="48">
                                    <Button.Triggers>
                                        <DataTrigger
                                            Binding="{Binding IsPlaying}"
                                            TargetType="Button"
                                            Value="False">
                                            <Setter Property="ImageSource">
                                                <Setter.Value>
                                                    <FontImageSource
                                                        FontFamily="{StaticResource IconFontFamily}"
                                                        Glyph="&#xf04b;"
                                                        Size="{DynamicResource IconSmallFontSize}"
                                                        Color="{AppThemeBinding Light={StaticResource OnPrimaryColor},
                                                                                Dark={StaticResource OnPrimaryColor}}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger
                                            Binding="{Binding IsPlaying}"
                                            TargetType="Button"
                                            Value="True">
                                            <Setter Property="ImageSource">
                                                <Setter.Value>
                                                    <FontImageSource
                                                        FontFamily="{StaticResource IconFontFamily}"
                                                        Glyph="&#xf04d;"
                                                        Size="{DynamicResource IconSmallFontSize}"
                                                        Color="{AppThemeBinding Light={StaticResource OnPrimaryColor},
                                                                                Dark={StaticResource OnPrimaryColor}}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Border>
                        </Grid>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!--  Compact Close Button with gradient background  -->
            <Border
                HeightRequest="48"
                Stroke="Transparent"
                StrokeShape="RoundRectangle 16"
                Margin="0,4,0,0"
                Background="{StaticResource PrimaryGradientBrush}">
                <Button
                    Padding="20,0"
                    BackgroundColor="Transparent"
                    Command="{Binding GoBackCommand}"
                    FontAttributes="Bold"
                    FontSize="{DynamicResource DefaultFontSize}"
                    HorizontalOptions="Fill"
                    Text="{localization:Translate Kapat}"
                    TextColor="{AppThemeBinding Light={StaticResource OnPrimaryColor},
                                                Dark={StaticResource OnPrimaryColor}}" />
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
