<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="SuleymaniyeCalendar.Views.PrayerDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:SuleymaniyeCalendar.ViewModels"
    x:DataType="viewModels:PrayerDetailViewModel"
    FlowDirection="{DynamicResource FlowDirection}">

    <ScrollView VerticalScrollBarVisibility="Never">
        <VerticalStackLayout
            Padding="12"
            x:DataType="viewModels:PrayerDetailViewModel"
            Spacing="12">
            <!--  Title  -->
            <Border Style="{StaticResource Card}">
                <VerticalStackLayout Spacing="8">
                    <Label
                        FontAttributes="Bold"
                        FontSize="{DynamicResource HeadlineLarge}"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeadlineMediumLabel}"
                        Text="{Binding Title}" />
                    <BoxView
                        HeightRequest="2"
                        HorizontalOptions="Center"
                        WidthRequest="60"
                        Color="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                Dark={StaticResource PrimaryAccent100Color}}" />
                </VerticalStackLayout>
            </Border>

            <!--  Time + Enable  -->
            <Border Style="{StaticResource Card}">
                <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12">
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource BodyLargeLabel}"
                        Text="{localization:Translate Vakti}"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="{DynamicResource SubHeaderFontSize}"
                        Style="{StaticResource TitleMediumLabel}"
                        Text="{Binding Time}"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Column="2"
                        Style="{StaticResource BodyLargeLabel}"
                        Text="{localization:Translate EtkinlestirSwitch}"
                        VerticalTextAlignment="Center" />
                    <Switch
                        Grid.Column="3"
                        Margin="4"
                        AutomationProperties.IsInAccessibleTree="True"
                        IsToggled="{Binding Enabled}"
                        OnColor="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                  Dark={StaticResource PrimaryAccent100Color}}"
                        SemanticProperties.Description="{localization:Translate EtkinlestirSwitchAciklama}"
                        ThumbColor="{AppThemeBinding Light={StaticResource White},
                                                     Dark={StaticResource White}}" />
                </Grid>
            </Border>

            <!--  Advanced options (platform dependent)  -->
            <!--<Border IsVisible="{Binding ShowAdvancedOptions}" Style="{StaticResource Card}">
                <VerticalStackLayout Spacing="8">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                        <Switch
