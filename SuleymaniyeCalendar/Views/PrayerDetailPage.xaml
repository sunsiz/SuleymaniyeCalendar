            <!--  Reminder time + sound  -->
            <Border IsVisible="{Binding Enabled}" Style="{StaticResource Card}">
                <VerticalStackLayout Spacing="16">
                    <!--  Notification Time Section  -->
                    <VerticalStackLayout Spacing="8">
                        <Label x:Name="LabelAlarmStartTime" Style="{StaticResource TitleMediumLabel}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{localization:Translate BildirmeZamani}" />
                                    <Span Text=" " />
                                    <Span FontAttributes="Bold" Text="{Binding NotificationTime}" />
                                    <Span Text=" " />
                                    <Span Text="{localization:Translate DakikaOnceden}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Slider
                            AutomationProperties.IsInAccessibleTree="true"
                            HeightRequest="44"
                            HorizontalOptions="Fill"
                            Maximum="60"
                            MaximumTrackColor="{AppThemeBinding Light={StaticResource Gray400},
                                                                Dark={StaticResource Gray400}}"
                            Minimum="0"
                            MinimumTrackColor="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                                Dark={StaticResource PrimaryAccent100Color}}"
                            SemanticProperties.Description="{localization:Translate BildirmeZamani}"
                            ThumbColor="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                         Dark={StaticResource PrimaryAccent100Color}}"
                            Value="{Binding NotificationTime}" />
                    </VerticalStackLayout>

                    <!--  Sound Selection Section  -->
                    <VerticalStackLayout Spacing="8">
                        <Label Style="{StaticResource TitleMediumLabel}" Text="{localization:Translate Birsessecin}" />
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <Border
                                Grid.Column="0"
                                BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceVariantColor},
                                                                  Dark={StaticResource SurfaceVariantColorDark}}"
                                Stroke="{AppThemeBinding Light={StaticResource OutlineColor},
                                                         Dark={StaticResource OutlineColorDark}}"
                                StrokeShape="RoundRectangle 12"
                                StrokeThickness="1">
                                <Picker
                                    Title="{localization:Translate Birsessecin}"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Fill"
                                    ItemDisplayBinding="{Binding Name}"
                                    ItemsSource="{Binding AvailableSounds}"
                                    SelectedItem="{Binding SelectedSound}"
                                    TextColor="{AppThemeBinding Light={StaticResource Black},
                                                                Dark={StaticResource White}}" />
                            </Border>
                            <Border
                                Grid.Column="1"
                                BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                                  Dark={StaticResource PrimaryAccent100Color}}"
                                HeightRequest="48"
                                Stroke="Transparent"
                                StrokeShape="RoundRectangle 12"
                                WidthRequest="48">
                                <Button
                                    Padding="0"
                                    AutomationProperties.IsInAccessibleTree="True"
                                    BackgroundColor="Transparent"
                                    Command="{Binding TestButtonClickedCommand}"
                                    HeightRequest="48"
                                    SemanticProperties.Description="{localization:Translate AlarmSwitch}"
                                    WidthRequest="48">
                                    <Button.Triggers>
                                        <DataTrigger
                                            Binding="{Binding IsPlaying}"
                                            TargetType="Button"
                                            Value="False">
                                            <Setter Property="ImageSource">
                                                <Setter.Value>
                                                    <FontImageSource
                                                        FontFamily="{StaticResource IconFontFamily}"
                                                        Glyph="&#xf04b;"
                                                        Size="{DynamicResource IconSmallFontSize}"
                                                        Color="{AppThemeBinding Light={StaticResource White},
                                                                                Dark={StaticResource PrimaryColor}}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger
                                            Binding="{Binding IsPlaying}"
                                            TargetType="Button"
                                            Value="True">
                                            <Setter Property="ImageSource">
                                                <Setter.Value>
                                                    <FontImageSource
                                                        FontFamily="{StaticResource IconFontFamily}"
                                                        Glyph="&#xf04d;"
                                                        Size="{DynamicResource IconSmallFontSize}"
                                                        Color="{AppThemeBinding Light={StaticResource White},
                                                                                Dark={StaticResource PrimaryColor}}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Border>
                        </Grid>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!--  Close  -->
            <Grid Margin="0,8,0,0" ColumnDefinitions="*">
                <Border
                    Grid.Column="0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                      Dark={StaticResource PrimaryAccent100Color}}"
                    HeightRequest="52"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 16">
                    <Button
                        Padding="16,0"
                        BackgroundColor="Transparent"
                        Command="{Binding GoBackCommand}"
                        FontAttributes="Bold"
                        FontSize="{DynamicResource DefaultFontSize}"
                        HorizontalOptions="Fill"
                        Text="{localization:Translate Kapat}"
                        TextColor="{AppThemeBinding Light={StaticResource White},
                                                    Dark={StaticResource PrimaryColor}}" />
                </Border>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>