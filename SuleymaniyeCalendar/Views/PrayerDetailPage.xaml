<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="SuleymaniyeCalendar.Views.PrayerDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:SuleymaniyeCalendar.ViewModels"
    x:DataType="viewModels:PrayerDetailViewModel"
    Background="{AppThemeBinding Light={StaticResource AppBackgroundLight}, Dark={StaticResource AppBackgroundDark}}"
    FlowDirection="{DynamicResource FlowDirection}">

    <Grid>
        <ScrollView x:DataType="viewModels:PrayerDetailViewModel" VerticalScrollBarVisibility="Never">
            <VerticalStackLayout
            Padding="{StaticResource PagePaddingMobile}"
            x:DataType="viewModels:PrayerDetailViewModel"
            Spacing="{StaticResource SpacingDefault}">

                <!--  Prayer Title Card  -->
                <Border Style="{StaticResource GlassCardSecondaryTint}" Padding="12,21">
                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeadlineLargeStyle}"
                        TextColor="{AppThemeBinding Light={StaticResource Neutral99},
                                                    Dark={StaticResource Neutral10}}"
                        Text="{Binding Title}" />
                        <BoxView
                        HeightRequest="3"
                        HorizontalOptions="Center"
                        WidthRequest="90"
                        Color="{AppThemeBinding Light={StaticResource Primary50},
                                                Dark={StaticResource Primary40}}" />
                    </VerticalStackLayout>
                </Border>

                <!--  Time & Enable Card  -->
                <Border Style="{StaticResource iOSLiquidGlassCard}">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="6" RowDefinitions="Auto,Auto" Padding="8,6,8,0">
                        <!-- Time Section -->
                        <VerticalStackLayout Grid.Column="0" Grid.Row="0" Spacing="4">
                            <Label
                            FontSize="{DynamicResource DefaultFontSize}"
                            FontAttributes="Bold"
                            Text="{localization:Translate Vakti}"
                            TextColor="{AppThemeBinding Light={StaticResource CardLabelLight}, Dark={StaticResource CardLabelDark}}" />
                            <Label
                            FontAttributes="Bold"
                            FontSize="{DynamicResource SubHeaderFontSize}"
                            Text="{Binding Time}"
                            TextColor="{AppThemeBinding Light={StaticResource CardValueLight}, Dark={StaticResource CardValueDark}}" />
                        </VerticalStackLayout>

                        <!-- Enable Switch Section -->
                        <VerticalStackLayout Grid.Column="1" Grid.Row="0" HorizontalOptions="End" Spacing="2">
                            <Label
                            HorizontalTextAlignment="Center"
                            Style="{StaticResource BodySmallStyle}"
                            Text="{localization:Translate EtkinlestirSwitch}"
                            TextColor="{AppThemeBinding Light={StaticResource CardLabelLight}, Dark={StaticResource CardLabelDark}}" />
                            <Switch
                            HorizontalOptions="Center"
                            AutomationProperties.IsInAccessibleTree="True"
                            IsToggled="{Binding Enabled}"
                            SemanticProperties.Description="{localization:Translate EtkinlestirSwitchAciklama}" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!--  Notification Settings Card  -->
                <Border IsVisible="{Binding Enabled}" Style="{StaticResource FrostGlassCardCrystal}">
                    <VerticalStackLayout x:DataType="viewModels:PrayerDetailViewModel" Spacing="8" Padding="8,6">
                        <!--  Notification Time Section  -->
                        <VerticalStackLayout x:DataType="viewModels:PrayerDetailViewModel" Spacing="8">
                            <VerticalStackLayout Spacing="8">
                                <Label 
                                FontSize="{DynamicResource DefaultFontSize}"
                                FontAttributes="Bold"
                                Text="{localization:Translate BildirmeZamani}" 
                                TextColor="{AppThemeBinding Light={StaticResource CardLabelLight}, Dark={StaticResource CardLabelDark}}" />
                                <Label FontSize="{DynamicResource DefaultFontSize}" 
                                       TextColor="{AppThemeBinding Light={StaticResource CardValueLight}, Dark={StaticResource CardValueDark}}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span
                                            FontAttributes="Bold"
                                            Text="{Binding NotificationTime}" />
                                            <Span Text=" " />
                                            <Span Text="{localization:Translate DakikaOnceden}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </VerticalStackLayout>

                            <Slider
                            Style="{StaticResource PremiumGoldenSlider}"
                            AutomationProperties.IsInAccessibleTree="true"
                            HeightRequest="44"
                            HorizontalOptions="Fill"
                            Maximum="60"
                            Minimum="0"
                            SemanticProperties.Description="{localization:Translate BildirmeZamani}"
                            Value="{Binding NotificationTime}" />
                        </VerticalStackLayout>

                        <!--  Sound Selection Section  -->
                        <VerticalStackLayout Spacing="8">
                            <Label 
                            FontSize="{DynamicResource DefaultFontSize}"
                            FontAttributes="Bold"
                            Text="{localization:Translate Birsessecin}" 
                            TextColor="{AppThemeBinding Light={StaticResource CardLabelLight}, Dark={StaticResource CardLabelDark}}" />
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                <Picker
                                Grid.Column="0"
                                Style="{StaticResource GoldenPicker}"
                                Title="{localization:Translate Birsessecin}"
                                HorizontalOptions="Fill"
                                ItemsSource="{Binding AvailableSounds}"
                                SelectedItem="{Binding SelectedSound}" />
                                <Button Grid.Column="1"
                                    x:DataType="viewModels:PrayerDetailViewModel"
                                    Margin="6"
                                        Style="{StaticResource iOSLiquidGlassButton}"
                                        FontFamily="{StaticResource IconFontFamily}"
                                        FontSize="{DynamicResource IconSmallFontSize}"
                                        Text="&#xf04b;"
                                        TextColor="{AppThemeBinding Light={StaticResource CardValueLight},
                                                                Dark={StaticResource CardValueDark}}"
                                        Command="{Binding TestButtonClickedCommand}"
                                        WidthRequest="52" HeightRequest="48">
                                    <Button.Triggers>
                                        <DataTrigger Binding="{Binding IsPlaying}" TargetType="Button" Value="True">
                                            <Setter Property="Style" Value="{StaticResource GlassButtonSuccess}" />
                                            <Setter Property="Text" Value="&#xf04d;" />
                                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceTextColor}, Dark={StaticResource OnSurfaceTextColorDark}}" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <Button Style="{StaticResource GlassButtonPrimaryIntense}" Command="{Binding SaveCommand}" Text="{localization:Translate Kaydet}" />
            </VerticalStackLayout>
        </ScrollView>

        <Grid IsVisible="{Binding ShowOverlay}" BackgroundColor="#80000000">
            <Border Style="{StaticResource FrostGlassCardCrystal}" Padding="36,24" HorizontalOptions="Center" VerticalOptions="Center">
                <VerticalStackLayout Spacing="14" HorizontalOptions="Center">
                    <ActivityIndicator IsRunning="True" Style="{StaticResource GoldenActivityIndicator}" WidthRequest="80" HeightRequest="80" />
                    <Label Text="{Binding OverlayMessage}" Style="{StaticResource BodyLargeStyle}" HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>
