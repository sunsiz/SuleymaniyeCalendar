<ContentPage
    x:Class="SuleymaniyeCalendar.Views.PrayerDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:SuleymaniyeCalendar.ViewModels"
    x:DataType="viewModels:PrayerDetailViewModel">

    <ScrollView VerticalScrollBarVisibility="Never">
        <VerticalStackLayout
            Padding="12"
            x:DataType="viewModels:PrayerDetailViewModel"
            Spacing="12">
            <!--  Title  -->
            <Border Style="{StaticResource Card}">
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalTextAlignment="Center"
                    Text="{Binding Title}" />
            </Border>

            <!--  Time + Enable  -->
            <Border Style="{StaticResource Card}">
                <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="8">
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource LabelStyle}"
                        Text="{localization:Translate Vakti}"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        Style="{StaticResource LabelStyle}"
                        Text="{Binding Time}"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Column="2"
                        Style="{StaticResource LabelStyle}"
                        Text="{localization:Translate EtkinlestirSwitch}"
                        VerticalTextAlignment="Center" />
                    <Switch
                        Grid.Column="3"
                        AutomationProperties.IsInAccessibleTree="True"
                        IsToggled="{Binding Enabled}"
                        SemanticProperties.Description="{localization:Translate EtkinlestirSwitchAciklama}" />
                </Grid>
            </Border>

            <!--  Advanced options (platform dependent)  -->
