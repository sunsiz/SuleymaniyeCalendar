<ContentPage
    x:Class="SuleymaniyeCalendar.Views.PrayerDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:SuleymaniyeCalendar.ViewModels"
    x:DataType="viewModels:PrayerDetailViewModel"
    Background="{AppThemeBinding Light={StaticResource AppBackgroundBrushLight}, Dark={StaticResource AppBackgroundBrushDark}}"
    FlowDirection="{DynamicResource FlowDirection}">

    <Grid>
    <ScrollView x:DataType="viewModels:PrayerDetailViewModel" VerticalScrollBarVisibility="Never">
        <VerticalStackLayout
            Padding="{StaticResource PagePaddingMobile}"
            x:DataType="viewModels:PrayerDetailViewModel"
            Spacing="{StaticResource SpacingDefault}">
            
            <!--  ðŸŽ¨ PHASE 15: Prayer Title Card - HeroPrimaryCard for maximum impact  -->
            <Border Style="{StaticResource iOSLiquidGlassCard}">
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeadlineLargeStyle}"
                        TextColor="{AppThemeBinding Light={StaticResource Neutral99},
                                                    Dark={StaticResource Neutral10}}"
                        Text="{Binding Title}" />
                    <BoxView
                        HeightRequest="2"
                        HorizontalOptions="Center"
                        WidthRequest="90"
                        Color="{AppThemeBinding Light={StaticResource Primary50},
                                                Dark={StaticResource Primary40}}" />
                </VerticalStackLayout>
            </Border>

            <!--  ðŸŽ¨ PHASE 15: Time & Enable Card - FrostGlassCardFrozen  -->
            <Border Style="{StaticResource FrostGlassCardFrozen}">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="6" RowDefinitions="Auto,Auto" RowSpacing="2">
                    <!-- Time Section -->
                    <VerticalStackLayout Grid.Column="0" Grid.Row="0" Spacing="4">
                        <Label
                            FontSize="{DynamicResource DefaultFontSize}"
                            FontAttributes="Bold"
                            Text="{localization:Translate Vakti}"
                            TextColor="{AppThemeBinding Light=#5A4A30, Dark={StaticResource Primary30}}" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="{DynamicResource SubHeaderFontSize}"
                            Text="{Binding Time}"
                            TextColor="{AppThemeBinding Light=#3A2E1C, Dark={StaticResource Primary40}}" />
                    </VerticalStackLayout>
                    
                    <!-- Enable Switch Section -->
                    <VerticalStackLayout Grid.Column="1" Grid.Row="0" HorizontalOptions="End" Spacing="4">
                        <Label
                            HorizontalTextAlignment="Center"
                            FontSize="{DynamicResource DefaultFontSize}"
                            FontAttributes="Bold"
                            Text="{localization:Translate EtkinlestirSwitch}"
                            TextColor="{AppThemeBinding Light=#5A4A30, Dark={StaticResource Primary30}}" />
                        <Switch
                            HorizontalOptions="Center"
                            Style="{StaticResource GoldenSwitch}"
                            AutomationProperties.IsInAccessibleTree="True"
                            IsToggled="{Binding Enabled}"
                            SemanticProperties.Description="{localization:Translate EtkinlestirSwitchAciklama}" />
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!--  Advanced options (platform dependent)  -->
