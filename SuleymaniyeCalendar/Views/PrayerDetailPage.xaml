            <!--  Compact Notification Settings Card  -->
            <Border IsVisible="{Binding Enabled}" Style="{StaticResource FrostGlassCardCrystal}">
                <VerticalStackLayout x:DataType="viewModels:PrayerDetailViewModel" Spacing="16">
                    <!--  Notification Time Section  -->
                    <VerticalStackLayout x:DataType="viewModels:PrayerDetailViewModel" Spacing="12">
                        <VerticalStackLayout Spacing="4">
                            <Label Style="{StaticResource TitleMediumStyle}" Text="{localization:Translate BildirmeZamani}" TextColor="{AppThemeBinding Light={StaticResource Neutral90}, Dark={StaticResource Neutral10}}" />
                            <Label Style="{StaticResource BodyMediumStyle}" TextColor="{AppThemeBinding Light={StaticResource Neutral90}, Dark={StaticResource Neutral10}}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            FontAttributes="Bold"
                                            FontSize="{DynamicResource DefaultFontSize}"
                                            Text="{Binding NotificationTime}" />
                                        <Span Text=" " />
                                        <Span Text="{localization:Translate DakikaOnceden}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>
                        
                        <Border Style="{StaticResource GlassCardSoft}" Padding="12,8">
                            <Slider
                                AutomationProperties.IsInAccessibleTree="true"
                                HeightRequest="36"
                                HorizontalOptions="Fill"
                                Maximum="60"
                                MaximumTrackColor="{AppThemeBinding Light={StaticResource Neutral60},
                                                                    Dark={StaticResource Neutral60}}"
                                Minimum="0"
                                MinimumTrackColor="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                                    Dark={StaticResource Primary30}}"
                                SemanticProperties.Description="{localization:Translate BildirmeZamani}"
                                ThumbColor="{AppThemeBinding Light={StaticResource PrimaryColor},
                                                             Dark={StaticResource Primary30}}"
                                Value="{Binding NotificationTime}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Sound Selection Section  -->
                    <VerticalStackLayout Spacing="12">
                        <Label Style="{StaticResource TitleMediumStyle}" Text="{localization:Translate Birsessecin}" TextColor="{AppThemeBinding Light={StaticResource Neutral99}, Dark={StaticResource Neutral10}}" />
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <Border Grid.Column="0" Style="{StaticResource GlassCardSoft}" Padding="12,8">
                                <Picker
                                    Title="{localization:Translate Birsessecin}"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Fill"
                                    ItemsSource="{Binding AvailableSounds}"
                                    SelectedItem="{Binding SelectedSound}"
                                    TextColor="{AppThemeBinding Light={StaticResource OnSurfaceColor},
                                                                Dark={StaticResource OnSurfaceColorDark}}"
                                    FontSize="{DynamicResource DefaultFontSize}" />
                            </Border>
                                <Button Grid.Column="1"
                                    x:DataType="viewModels:PrayerDetailViewModel"
                                    Margin="6"
                                        Style="{StaticResource VistaAeroGlassButton}"
                                        TextColor="{AppThemeBinding Light={StaticResource OnSurfaceColor},
                                                                Dark={StaticResource OnSurfaceColorDark}}"
                                        Command="{Binding TestButtonClickedCommand}"
                                        WidthRequest="52" HeightRequest="48">
                                    <Button.Triggers>
                                        <DataTrigger Binding="{Binding IsPlaying}" TargetType="Button" Value="False">
                                            <Setter Property="ImageSource">
                                                <Setter.Value>
                                                    <FontImageSource FontFamily="{StaticResource IconFontFamily}"
                                                                     Glyph="&#xf04b;" Size="{DynamicResource IconSmallFontSize}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsPlaying}" TargetType="Button" Value="True">
                                            <Setter Property="Style" Value="{StaticResource GlassButtonWarning}" />
                                            <Setter Property="ImageSource">
                                                <Setter.Value>
                                                    <FontImageSource FontFamily="{StaticResource IconFontFamily}"
                                                                     Glyph="&#xf04d;" Size="{DynamicResource IconSmallFontSize}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                        </Grid>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!--  Close Button - Glass primary variant  -->
            <Button
                Style="{StaticResource GlassButtonSecondary}"
                Command="{Binding GoBackCommand}"
                Text="{localization:Translate Kapat}" />
        </VerticalStackLayout>
    </ScrollView>

    <!-- Scheduling overlay -->
    <Grid IsVisible="{Binding ShowOverlay}" BackgroundColor="#80000000">
        <Border Style="{StaticResource GlassCardSoft}" Padding="36,24" HorizontalOptions="Center" VerticalOptions="Center">
            <VerticalStackLayout Spacing="14" HorizontalOptions="Center">
                <ActivityIndicator IsRunning="True" Color="{StaticResource PrimaryColor}" WidthRequest="48" HeightRequest="48" />
                <Label Text="{Binding OverlayMessage}" Style="{StaticResource BodyLargeStyle}" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Border>
    </Grid>
    </Grid>

</ContentPage>
