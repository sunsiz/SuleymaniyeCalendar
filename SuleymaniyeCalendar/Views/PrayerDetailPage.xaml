<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="SuleymaniyeCalendar.Views.PrayerDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:SuleymaniyeCalendar.ViewModels"
    x:DataType="viewModels:PrayerDetailViewModel"
    Background="{AppThemeBinding Light={StaticResource AppBackgroundLight}, Dark={StaticResource AppBackgroundDark}}"
    FlowDirection="{DynamicResource FlowDirection}">

    <Grid>
        <ScrollView x:DataType="viewModels:PrayerDetailViewModel" VerticalScrollBarVisibility="Never">
            <VerticalStackLayout
            Padding="{StaticResource PagePaddingMobile}"
            x:DataType="viewModels:PrayerDetailViewModel"
            Spacing="{StaticResource SpacingDefault}">

                <!--  ðŸŽ¨ PHASE 15: Prayer Title Card - HeroPrimaryCard for maximum impact  -->
                <Border Style="{StaticResource GlassCardSecondaryTint}" Padding="12,22">
                    <VerticalStackLayout Spacing="12">
                        <Label
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeadlineLargeStyle}"
                        TextColor="{AppThemeBinding Light={StaticResource Neutral99},
                                                    Dark={StaticResource Neutral10}}"
                        Text="{Binding Title}" />
                        <BoxView
                        HeightRequest="2"
                        HorizontalOptions="Center"
                        WidthRequest="90"
                        Color="{AppThemeBinding Light={StaticResource Primary50},
                                                Dark={StaticResource Primary40}}" />
                    </VerticalStackLayout>
                </Border>

                <!--  ðŸŽ¨ PHASE 15: Time & Enable Card - FrostGlassCardFrozen  -->
                <Border Style="{StaticResource iOSLiquidGlassCard}">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="6" RowDefinitions="Auto,Auto" RowSpacing="2">
                        <!-- Time Section -->
                        <VerticalStackLayout Grid.Column="0" Grid.Row="0" Spacing="4">
                            <Label
                            FontSize="{DynamicResource DefaultFontSize}"
                            FontAttributes="Bold"
                            Text="{localization:Translate Vakti}"
                            TextColor="{AppThemeBinding Light=#5A4A30, Dark={StaticResource Primary30}}" />
                            <Label
                            FontAttributes="Bold"
                            FontSize="{DynamicResource SubHeaderFontSize}"
                            Text="{Binding Time}"
                            TextColor="{AppThemeBinding Light=#3A2E1C, Dark={StaticResource Primary40}}" />
                        </VerticalStackLayout>

                        <!-- Enable Switch Section -->
                        <VerticalStackLayout Grid.Column="1" Grid.Row="0" HorizontalOptions="End" Spacing="4">
                            <Label
                            HorizontalTextAlignment="Center"
                            FontSize="{DynamicResource DefaultFontSize}"
                            FontAttributes="Bold"
                            Text="{localization:Translate EtkinlestirSwitch}"
                            TextColor="{AppThemeBinding Light=#5A4A30, Dark={StaticResource Primary30}}" />
                            <Switch
                            HorizontalOptions="Center"
                            Style="{StaticResource GoldenSwitch}"
                            AutomationProperties.IsInAccessibleTree="True"
                            IsToggled="{Binding Enabled}"
                            SemanticProperties.Description="{localization:Translate EtkinlestirSwitchAciklama}" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!--  ðŸŽ¨ PHASE 15: Notification Settings Card - StandardCard  -->
                <Border IsVisible="{Binding Enabled}" Style="{StaticResource FrostGlassCardCrystal}">
                    <VerticalStackLayout x:DataType="viewModels:PrayerDetailViewModel" Spacing="16">
                        <!--  Notification Time Section  -->
                        <VerticalStackLayout x:DataType="viewModels:PrayerDetailViewModel" Spacing="12">
                            <VerticalStackLayout Spacing="4">
                                <Label 
                                FontSize="{DynamicResource DefaultFontSize}"
                                FontAttributes="Bold"
                                Text="{localization:Translate BildirmeZamani}" 
                                TextColor="{AppThemeBinding Light=#5A4A30, Dark={StaticResource Primary30}}" />
                                <Label TextColor="{AppThemeBinding Light=#3A2E1C, Dark={StaticResource Primary40}}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span
                                            FontAttributes="Bold"
                                            FontSize="{DynamicResource DefaultFontSize}"
                                            Text="{Binding NotificationTime}" />
                                            <Span 
                                            FontSize="{DynamicResource DefaultFontSize}"
                                            Text=" " />
                                            <Span 
                                            FontSize="{DynamicResource DefaultFontSize}"
                                            Text="{localization:Translate DakikaOnceden}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </VerticalStackLayout>

                            <Slider
                            Style="{StaticResource PremiumGoldenSlider}"
                            AutomationProperties.IsInAccessibleTree="true"
                            HeightRequest="44"
                            HorizontalOptions="Fill"
                            Maximum="60"
                            Minimum="0"
                            SemanticProperties.Description="{localization:Translate BildirmeZamani}"
                            Value="{Binding NotificationTime}" />
                        </VerticalStackLayout>

                        <!--  Sound Selection Section  -->
                        <VerticalStackLayout Spacing="12">
                            <Label 
                            FontSize="{DynamicResource DefaultFontSize}"
                            FontAttributes="Bold"
                            Text="{localization:Translate Birsessecin}" 
                            TextColor="{AppThemeBinding Light=#5A4A30, Dark={StaticResource Primary30}}" />
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                <Picker
                                Grid.Column="0"
                                Style="{StaticResource GoldenPicker}"
                                Title="{localization:Translate Birsessecin}"
                                HorizontalOptions="Fill"
                                ItemsSource="{Binding AvailableSounds}"
                                SelectedItem="{Binding SelectedSound}" />
                                <Button Grid.Column="1"
                                    x:DataType="viewModels:PrayerDetailViewModel"
                                    Margin="6"
                                        Style="{StaticResource iOSLiquidGlassButton}"
                                        TextColor="{AppThemeBinding Light=#3A2E1C,
                                                                Dark={StaticResource Primary40}}"
                                        Command="{Binding TestButtonClickedCommand}"
                                        WidthRequest="52" HeightRequest="48">
                                    <Button.Triggers>
                                        <DataTrigger Binding="{Binding IsPlaying}" TargetType="Button" Value="False">
                                            <Setter Property="ImageSource">
                                                <Setter.Value>
                                                    <FontImageSource FontFamily="{StaticResource IconFontFamily}"
                                                                     Glyph="&#xf04b;" Size="{DynamicResource IconSmallFontSize}"
                                                                     Color="{AppThemeBinding Light=#3A2E1C, Dark={StaticResource Primary40}}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsPlaying}" TargetType="Button" Value="True">
                                            <Setter Property="Style" Value="{StaticResource GlassButtonWarning}" />
                                            <Setter Property="ImageSource">
                                                <Setter.Value>
                                                    <FontImageSource FontFamily="{StaticResource IconFontFamily}"
                                                                     Glyph="&#xf04d;" Size="{DynamicResource IconSmallFontSize}"
                                                                     Color="{AppThemeBinding Light={StaticResource Warning60}, Dark={StaticResource Warning30}}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!--  ðŸŽ¨ PHASE 15: Close Button - GlassButtonPrimary  -->
                <Button Style="{StaticResource GlassButtonPrimaryIntense}" Command="{Binding GoBackCommand}" Text="{localization:Translate Kapat}" />
            </VerticalStackLayout>
        </ScrollView>

        <!--  ðŸŽ¨ PHASE 15: Scheduling overlay with FrostGlassCardCrystal  -->
        <Grid IsVisible="{Binding ShowOverlay}" BackgroundColor="#80000000">
            <Border Style="{StaticResource FrostGlassCardCrystal}" Padding="36,24" HorizontalOptions="Center" VerticalOptions="Center">
                <VerticalStackLayout Spacing="14" HorizontalOptions="Center">
                    <ActivityIndicator IsRunning="True" Style="{StaticResource GoldenActivityIndicator}" WidthRequest="80" HeightRequest="80" />
                    <Label Text="{Binding OverlayMessage}" Style="{StaticResource BodyLargeStyle}" HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>
