            <!--  Reminder time + sound  -->
            <Border
                IsEnabled="{Binding Enabled}"
                IsVisible="{Binding Enabled}"
                Style="{StaticResource Card}">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="LabelAlarmStartTime" Style="{StaticResource AccessibleLabel}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{localization:Translate BildirmeZamani}" />
                                <Span x:DataType="viewModels:PrayerDetailViewModel" Text="{Binding NotificationTime}" />
                                <Span Text="{localization:Translate DakikaOnceden}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Slider
                        AutomationProperties.IsInAccessibleTree="true"
                        HeightRequest="44"
                        Maximum="60"
                        Minimum="0"
                        SemanticProperties.Description="{localization:Translate BildirmeZamani}"
                        Value="{Binding NotificationTime}" />
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Picker
                            Title="{localization:Translate Birsessecin}"
                            Grid.Column="0"
                            ItemDisplayBinding="{Binding Name}"
                            ItemsSource="{Binding AvailableSounds}"
                            SelectedItem="{Binding SelectedSound}" />
                        <Button
                            Grid.Column="1"
                            Padding="0"
                            Style="{StaticResource IconButtonStyle}"
                            AutomationProperties.IsInAccessibleTree="True"
                            BackgroundColor="Transparent"
                            Command="{Binding TestButtonClickedCommand}"
                            HeightRequest="48"
                            SemanticProperties.Description="{localization:Translate AlarmSwitch}"
                            WidthRequest="48">
                            <Button.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsPlaying}"
                                    TargetType="Button"
                                    Value="False">
                                    <Setter Property="ImageSource">
                                        <Setter.Value>
                                            <FontImageSource
                                                FontFamily="{StaticResource IconFontFamily}"
                                                Glyph="&#xf04b;"
                                                Size="24" />
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding IsPlaying}"
                                    TargetType="Button"
                                    Value="True">
                                    <Setter Property="ImageSource">
                                        <Setter.Value>
                                            <FontImageSource
                                                FontFamily="{StaticResource IconFontFamily}"
                                                Glyph="&#xf04d;"
                                                Size="24" />
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!--  Close  -->
            <Grid ColumnDefinitions="*">
                <Button
                    Grid.Column="0"
                    Padding="7"
                    BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryAccent400Color},
                                                      Dark={StaticResource SecondaryColor}}"
                    Command="{Binding GoBackCommand}"
                    HorizontalOptions="Fill"
                    Style="{DynamicResource ButtonStyle}"
                    Text="{localization:Translate Kapat}" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>